@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["lbl_Finance"] + " - Transaction";





    var accessRightsByUserJson = Context.Session.GetString("AccessRightsByUserActionSORs");

    var accessRightByUsertList = string.IsNullOrEmpty(accessRightsByUserJson)

        ? new List<int>()

        : System.Text.Json.JsonSerializer.Deserialize<List<int>>(accessRightsByUserJson);







    var accessRightsByRoleJson = Context.Session.GetString("AccessRightsByRoleActionSORs");

    var accessRightByRoleList = string.IsNullOrEmpty(accessRightsByRoleJson)

        ? new List<int>()

        : System.Text.Json.JsonSerializer.Deserialize<List<int>>(accessRightsByRoleJson);

}

@section PageScripts {
    <script src="~/js/pages-account-settings-account.js"></script>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
    <style>

    </style>
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">@Localizer["lbl_Finance"] /</span> Transaction
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" href="~/FI_Main_Dashboard/Index"><i class="bx bx-home me-1"></i> @Localizer["lbl_Main"]</a></li>
            <li class="nav-item"><a class="nav-link" href="~/FI_Management_Dashboard/Index"><i class="bx bx-group me-1"></i> @Localizer["lbl_Management"]</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-dollar me-1"></i> @Localizer["lbl_Transaction"]</a></li>
            <li class="nav-item"><a class="nav-link" href="~/FI_Report_Dashboard/Index"><i class="bx bx-bar-chart-alt me-1"></i> @Localizer["lbl_Reports"]</a></li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header"> @Localizer["lbl_Details"]</h5>

            <div class="row" style="padding: 30px 30px 0px 30px;">
                @if (accessRightByRoleList.Contains(51) || accessRightByUsertList.Contains(51))

                {
                    @*JournalVoucher*@
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <a asp-controller="JournalVoucher" asp-action="Index">
                            <div class="modern-card shadow mb-4">
                                <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                    <div class="card-details">
                                        <strong class="text-primary">Journal Voucher</strong>
                                        <h4 class="font-weight-bold text-dark">
                                            @ViewBag.JournalVoucherCount
                                        </h4>
                                    </div>
                                    <div class="icon bg-primary text-white ">
                                        <i class="fa fa-file-alt Card1I" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="card-footer bg-white text-muted text-center">
                                    @Localizer["lbl_ViewDetails"] <i class="fa fa-arrow-right"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                @if (accessRightByRoleList.Contains(54) || accessRightByUsertList.Contains(54))



                {
                    @*TransferVoucher*@
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <a asp-controller="TransferVoucher" asp-action="Index">
                            <div class="modern-card shadow mb-4">
                                <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                    <div class="card-details">
                                        <strong class="text-primary">Transfer Voucher</strong>
                                        <h4 class="font-weight-bold text-dark">
                                            @ViewBag.TransferVoucherCount
                                        </h4>
                                    </div>
                                    <div class="icon bg-primary text-white ">
                                        <i class="fa fa-exchange-alt Card1I" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="card-footer bg-white text-muted text-center">
                                    @Localizer["lbl_ViewDetails"] <i class="fa fa-arrow-right"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                @if (accessRightByRoleList.Contains(52) || accessRightByUsertList.Contains(52))

                {
                    @*PaymentVoucher*@
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <a asp-controller="PaymentVoucher" asp-action="Index">
                            <div class="modern-card shadow mb-4">
                                <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                    <div class="card-details">
                                        <strong class="text-primary">Payment Voucher</strong>
                                        <h4 class="font-weight-bold text-dark">
                                            @ViewBag.PaymentVoucherCount
                                        </h4>
                                    </div>
                                    <div class="icon bg-primary text-white ">
                                        <i class="fa fa-money-bill-wave Card1I" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="card-footer bg-white text-muted text-center">
                                    @Localizer["lbl_ViewDetails"] <i class="fa fa-arrow-right"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                @if (accessRightByRoleList.Contains(53) || accessRightByUsertList.Contains(53))

                {
                    @*ReceivedVoucher*@
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <a asp-controller="ReceivedVoucher" asp-action="Index">
                            <div class="modern-card shadow mb-4">
                                <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                    <div class="card-details">
                                        <strong class="text-primary">Received Voucher</strong>
                                        <h4 class="font-weight-bold text-dark">
                                            @ViewBag.ReceivedVoucherCount
                                        </h4>
                                    </div>
                                    <div class="icon bg-primary text-white ">
                                        <i class="fa fa-receipt Card1I" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="card-footer bg-white text-muted text-center">
                                    @Localizer["lbl_ViewDetails"] <i class="fa fa-arrow-right"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                }
               
            </div>
        </div>
    </div>
</div>

