@model IEnumerable<Exampler_ERP.Models.FI_Vendor>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintVendor"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_VendorList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_VendorID"]</th>
                <th>@Localizer["lbl_VendorName"]</th>
                <th>@Localizer["lbl_VendorPayee"]</th>
                <th>@Localizer["lbl_Cell"]</th>
                <th>@Localizer["lbl_Phone"] </th>
                <th>@Localizer["lbl_PersonName"]</th>
                <th>@Localizer["lbl_Fax"] </th>
                <th>@Localizer["lbl_Filer"]</th>
                <th>@Localizer["lbl_STN"]</th>
                <th>@Localizer["lbl_STNRate"]</th>
                <th>@Localizer["lbl_NTN"]</th>
                <th>@Localizer["lbl_NTNRate"]</th>
                <th>@Localizer["lbl_IncomeTax(Withholding)"]</th>
                <th>@Localizer["lbl_SaleTaxAccount"]</th>
                <th>@Localizer["lbl_Province"]</th>
                <th>@Localizer["lbl_Federal"]</th>
                <th>@Localizer["lbl_PaymentSection"]</th>
                <th>@Localizer["lbl_Address"] </th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Vendor in Model)
            {
                <tr>
                    <td>@Vendor.VendorID</td>
                    <td>@Vendor.HeadofAccount_Five.HeadofAccount_FiveName</td>
                    <td>@Vendor.PayeeName</td>
                    <td>@Vendor.Cell</td>
                    <td>@Vendor.Phone</td>
                    <td>@Vendor.PersonName</td>
                    <td>@Vendor.Fax</td>
                    <td>@Vendor.Filer</td>
                    <td>@Vendor.STN</td>
                    <td>@Vendor.STNRate</td>
                    <td>@Vendor.NTN</td>
                    <td>@Vendor.NTNRate</td>
                    <td>@Vendor.IncomTaxWithHoding_ID</td>
                    <td>@Vendor.SaleTax_ID</td>
                    <td>@Vendor.Province</td>
                    <td>@Vendor.Federal</td>
                    <td>@Vendor.PaymentSec</td>
                    <td>@Vendor.Address</td>
                    <td>@(Vendor.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        window.print();
    </script>
</body>
</html>
