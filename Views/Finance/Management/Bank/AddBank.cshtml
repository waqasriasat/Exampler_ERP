@model Exampler_ERP.Models.FI_Bank

<div class="modal fade" id="addBankModal" tabindex="-1" role="dialog" aria-labelledby="addBankModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addBankModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New Bank
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addBankForm">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">
                            <label for="BankName" class="form-label fw-bold">Bank Name</label>
                            <input type="text" class="form-control form-control-lg" id="BankName" name="BankName" value="@Model.BankName" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text", Model.ActiveYNID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label for="AccountNo" class="form-label fw-bold">Account No</label>
                            <input type="text" class="form-control form-control-lg" id="AccountNo" name="AccountNo" value="@Model.AccountNo" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label for="Phone" class="form-label fw-bold">Phone</label>
                            <input type="text" class="form-control form-control-lg" id="Phone" name="Phone" value="@Model.Phone" />
                        </div>
                        <div class="col-12 col-md-12 col-lg-12">
                            <label for="Address" class="form-label fw-bold">Address</label>
                            <input type="text" class="form-control form-control-lg" id="Address" name="Address" value="@Model.Address" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveNewBank">Save</button>
            </div>
        </div>
    </div>
</div>
