@model Exampler_ERP.Models.Settings_CashAgainstSale
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="editCashAgainstSaleModal" tabindex="-1" role="dialog" aria-labelledby="editCashAgainstSaleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editCashAgainstSaleModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Cash Against Sale
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editCashAgainstSaleForm">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="BranchTypeID" class="form-label fw-bold">@Localizer["lbl_SelectBranch"]</label>
                            <select asp-for="BranchTypeID" asp-items="@(new SelectList(ViewBag.BranchList, "Value", "Text", Model.BranchTypeID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="BranchTypeID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="HeadofAccount_FiveID" class="form-label fw-bold">Select Cash Agianst Sale Account</label>
                            <select asp-for="HeadofAccount_FiveID" asp-items="@(new SelectList(ViewBag.FiveList, "Value", "Text", Model.HeadofAccount_FiveID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="HeadofAccount_FiveID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">@Localizer["lbl_Active"]</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text", Model.ActiveYNID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" id="CashAgainstSaleID" name="CashAgainstSaleID" value="@Model.CashAgainstSaleID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveChanges">@Localizer["lbl_SaveChanges"]</button>
            </div>
        </div>
    </div>
</div>
