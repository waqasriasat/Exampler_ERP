                                <div class="col-6">
                                    <p class="text-nowrap">@Localizer["lbl_Delete"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="headofAccount_FiveListContainer">
                    @Html.Partial("~/Views/Finance/MasterInfo/HeadofAccount_Five/_HeadofAccount_FiveListPartial.cshtml", Model)
                </div>
            </div>

        </div>
    </div>
</div>

