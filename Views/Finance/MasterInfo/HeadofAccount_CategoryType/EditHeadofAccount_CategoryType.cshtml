@model Exampler_ERP.Models.Settings_HeadofAccount_CategoryType

<div class="modal fade" id="editHeadofAccount_CategoryTypeModal" tabindex="-1" role="dialog" aria-labelledby="editHeadofAccount_CategoryTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editHeadofAccount_CategoryTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Category Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editHeadofAccount_CategoryTypeForm">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">
                            <label for="CategoryTypeName" class="form-label fw-bold">Category Type Name</label>
                            <input type="text" class="form-control form-control-lg" id="CategoryTypeName" name="CategoryTypeName" value="@Model.CategoryTypeName" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text", Model.ActiveYNID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" id="CategoryTypeID" name="CategoryTypeID" value="@Model.CategoryTypeID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
