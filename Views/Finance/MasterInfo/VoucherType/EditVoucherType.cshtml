@model Exampler_ERP.Models.Settings_VoucherType

<div class="modal fade" id="editVoucherTypeModal" tabindex="-1" role="dialog" aria-labelledby="editVoucherTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editVoucherTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Voucher Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editVoucherTypeForm">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">
                            <label for="VoucherTypeName" class="form-label fw-bold">Voucher Type Name</label>
                            <input type="text" class="form-control form-control-lg" id="VoucherTypeName" name="VoucherTypeName" value="@Model.VoucherTypeName" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text", Model.ActiveYNID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label for="VoucherNature" class="form-label fw-bold">Nature</label>
                            <input type="text" class="form-control form-control-lg" id="VoucherNature" name="VoucherNature" value="@Model.VoucherNature" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label for="VoucherPrefix" class="form-label fw-bold">Prefix</label>
                            <input type="text" class="form-control form-control-lg" id="VoucherPrefix" name="VoucherPrefix" value="@Model.VoucherPrefix" />
                        </div>
                    </div>
                    <input type="hidden" id="VoucherTypeID" name="VoucherTypeID" value="@Model.VoucherTypeID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
