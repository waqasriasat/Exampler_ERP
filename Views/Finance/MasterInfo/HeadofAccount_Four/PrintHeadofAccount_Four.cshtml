@model IEnumerable<Exampler_ERP.Models.Settings_HeadofAccount_Four>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintHeadofAccountFour"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_HeadofAccountFourList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_HeadofAccountFourID"]</th>
                <th>@Localizer["lbl_HeadofAccountFourName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var HeadofAccount_Four in Model)
            {
                <tr>
                    <td>@HeadofAccount_Four.HeadofAccount_FourID</td>
                    <td>@HeadofAccount_Four.HeadofAccount_FourName</td>
                    <td>@(HeadofAccount_Four.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
