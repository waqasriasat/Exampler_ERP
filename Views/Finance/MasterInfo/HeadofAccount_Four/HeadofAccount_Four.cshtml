@model IEnumerable<Exampler_ERP.Models.Settings_HeadofAccount_Four>

@{
    ViewData["Title"] = "Master Information - HeadofAccount_Four";
}

@section PageScripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-KyZXEAg3QhqLMpG8r+Knujsl5+5hb5z2N7O6eHg4d5e2jtV5Wz4w69F+QYw1Fz4yD61DdE8kOkWJLvHh7vDkg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script>
        $(document).ready(function () {
            // Edit HeadofAccount_Four modal popup
            $('.editHeadofAccount_FourLink').click(function (e) {
                e.preventDefault();
                var HeadofAccount_FourId = $(this).data('id');
                $.get('@Url.Action("Edit", "HeadofAccount_Four")', { id: HeadofAccount_FourId }, function (data) {
                    $('#editHeadofAccount_FourModalContainer').html(data);
                    $('#editHeadofAccount_FourModal').modal('show');
                });
            });

            $('#editHeadofAccount_FourModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editHeadofAccount_FourForm').serialize();
                $.post('@Url.Action("Edit", "HeadofAccount_Four")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Add new HeadofAccount_Four modal popup
            $('.addHeadofAccount_FourLink').click(function () {
                $.get('@Url.Action("Create", "HeadofAccount_Four")', function (data) {
                    $('#addHeadofAccount_FourModalContainer').html(data);
                    $('#addHeadofAccount_FourModal').modal('show');
                });
            });

            // Save new HeadofAccount_Four form
            $('#addHeadofAccount_FourModalContainer').on('click', '#saveNewHeadofAccount_Four', function () {
                var formData = $('#addHeadofAccount_FourForm').serialize();
                $.post('@Url.Action("Create", "HeadofAccount_Four")', formData, function (response) {
                    if (response.success) {
                        $('#addHeadofAccount_FourModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addHeadofAccount_FourModalContainer').on('click', '#Close', function () {
                $('#addHeadofAccount_FourModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editHeadofAccount_FourModalContainer').on('click', '#Close', function () {
                $('#editHeadofAccount_FourModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete HeadofAccount_Four
            $('.deleteHeadofAccount_FourLink').click(function (e) {
                e.preventDefault();
                var HeadofAccount_FourId = $(this).data('id');
                $.post('@Url.Action("Delete", "HeadofAccount_Four")', { id: HeadofAccount_FourId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printHeadofAccount_Foures() {
            var printWindow = window.open('@Url.Action("Print", "HeadofAccount_Four")', '_blank');
            printWindow.focus();
        }
        $('#searchHeadofAccount_FourButton').click(function () {
            var searchValue = $('#searchHeadofAccount_FourInput').val();
            window.location.href = '@Url.Action("Index", "HeadofAccount_Four")?searchFourName=' + searchValue;
        });
    </script>


}



<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> HeadofAccount_Four
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">Searching Box</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search HeadofAccount_Four name" id="searchHeadofAccount_FourInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchHeadofAccount_FourButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                        <button type="button" class="btn btn-primary addHeadofAccount_FourLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "HeadofAccount_Four")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printHeadofAccount_Foures()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">HeadofAccount_Four List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-5">
                                    <p class="text-nowrap">HeadofAccount_Four Name</p>
                                </div>
                                <div class="col-5">
                                    <p class="text-nowrap">Head Account</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-2">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Delete</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-10 col-lg-10">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-5">
                                        <p class="text-nowrap"><span class="smallAdd">HeadofAccount_Four Name : </span>@Html.DisplayFor(modelItem => item.HeadofAccount_FourName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-5">
                                        <p class="text-nowrap"><span class="smallAdd">Head Account : </span>@Html.DisplayFor(modelItem => item.HeadofAccount_Third.HeadofAccount_ThirdName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 2)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 col-md-2 col-lg-2">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editHeadofAccount_FourLink" data-id="@item.HeadofAccount_FourID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteHeadofAccount_FourLink" data-id="@item.HeadofAccount_FourID">
                                                <i class="fa-regular fa-trash-can" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editHeadofAccount_FourModalContainer"></div>
<div id="addHeadofAccount_FourModalContainer"></div>

