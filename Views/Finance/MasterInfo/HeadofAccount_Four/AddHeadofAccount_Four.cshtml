@model Exampler_ERP.Models.Settings_HeadofAccount_Four
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addHeadofAccount_FourModal" tabindex="-1" role="dialog" aria-labelledby="addHeadofAccount_FourModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addHeadofAccount_FourModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New HeadofAccount_Four
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addHeadofAccount_FourForm">
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="HeadofAccount_ThirdID" class="form-label fw-bold">Select Head Account</label>
                            <select asp-for="HeadofAccount_ThirdID" asp-items="@(new SelectList(ViewBag.ThirdList, "Value", "Text", Model.HeadofAccount_ThirdID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="HeadofAccount_ThirdID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">@Localizer["lbl_Active"]</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text", Model.ActiveYNID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-12 col-lg-12">
                            <label for="HeadofAccount_FourName" class="form-label fw-bold">@Localizer["lbl_HeadofAccount"]_@Localizer["lbl_Four"] @Localizer["lbl_Name"]</label>
                            <input type="text" class="form-control form-control-lg" id="HeadofAccount_FourName" name="HeadofAccount_FourName" value="@Model.HeadofAccount_FourName" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewHeadofAccount_Four">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>
