@model IEnumerable<Exampler_ERP.Models.FI_Voucher>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Transaction - Payment Voucher";
}



@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit Voucher modal popup
           $('#PaymentVoucherListContainer').on('click', '.editPaymentVoucherLink', function (e) {
                e.preventDefault();
                var VoucherId = $(this).data('id');
                $.get('@Url.Action("Edit", "PaymentVoucher")', { id: VoucherId }, function (data) {
                    $('#editVoucherModalContainer').html(data);
                    $('#editVoucherModal').modal('show');
                    // Trigger the calculation after modal is shown

                });
            });

            $('#editVoucherModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editVoucherForm').serialize();
                $.post('@Url.Action("Edit", "PaymentVoucher")', formData, function (response) {
                 if (response.success) {
                            $('#editPaymentVoucherModal').modal('hide');

                            // ✅ Ab poora list AJAX se reload karo
                            $.get('@Url.Action("Index", "PaymentVoucher")', function (partialHtml) {
                                var html = $(partialHtml).find('#PaymentVoucherListContainer').html();
                                $('#PaymentVoucherListContainer').html(html);
                            });
                        }
                });
            });

            // Add new Voucher modal popup
            $('.addVoucherLink').click(function () {
                $.get('@Url.Action("Create", "PaymentVoucher")', function (data) {
                    $('#addVoucherModalContainer').html(data);
                    $('#addVoucherModal').modal('show');
                });
            });

            // Save new Voucher form
            $('#addVoucherModalContainer').on('click', '#saveNewVoucher', function () {
                var formData = $('#addVoucherForm').serialize();
                $.post('@Url.Action("Create", "PaymentVoucher")', formData, function (response) {
                   if (response.success) {
                            $('#addPaymentVoucherModal').modal('hide');

                            // ✅ Ab poora list AJAX se reload karo
                            $.get('@Url.Action("Index", "PaymentVoucher")', function (partialHtml) {
                                var html = $(partialHtml).find('#PaymentVoucherListContainer').html();
                                $('#PaymentVoucherListContainer').html(html);
                            });
                        }
                });
            });

            // Close Modal Add Contrainer
            $('#addVoucherModalContainer').on('click', '#Close', function () {
                $('#addVoucherModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editVoucherModalContainer').on('click', '#Close', function () {
                $('#editVoucherModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete Voucher
            $('#PaymentVoucherListContainer').on('click', '.deletePaymentVoucherLink', function (e) {
                e.preventDefault();
                var VoucherId = $(this).data('id');
                $.post('@Url.Action("Delete", "PaymentVoucher")', { id: VoucherId }, function (response) {
                   if (response.success) {
                    $.get('@Url.Action("Index", "PaymentVoucher")', function (partialHtml) {
                      var html = $(partialHtml).find('#PaymentVoucherListContainer').html();
                      $('#PaymentVoucherListContainer').html(html);
                    });
                  }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });



        });
    </script>
    <script>
        function printVoucheres() {
            var printWindow = window.open('@Url.Action("Print", "PaymentVoucher")', '_blank');
            printWindow.focus();
        }
        $('#searchHeadofAccountButton').click(function () {
            var searchValue = $('#searchHeadofAccountInput').val();
            window.location.href = '@Url.Action("Index", "PaymentVoucher")?searchHeadofAccount_FiveName=' + searchValue;
        });
    </script>


}



<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Transaction /</span> Payment Voucher
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="@Localizer["lbl_Search"] Head of Account" id="searchHeadofAccountInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchHeadofAccountButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                        <button type="button" class="btn btn-primary addVoucherLink">@Localizer["lbl_AddNew"]</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "PaymentVoucher")'">@Localizer["lbl_Excel"]</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printVoucheres()">@Localizer["lbl_Print"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Payment Voucher @Localizer["lbl_List"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-11 col-lg-11">
                            <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">Voucher #</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_Date"] </p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Head of Account</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Credit Ammount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-1 col-lg-1">
                            <p class="text-nowrap">@Localizer["lbl_Edit"]</p>
                        </div>
                    </div>
                </div>
                <div id="paymentVoucherListContainer">
                    @Html.Partial("~/Views/Finance/Transaction/PaymentVoucher/_PaymentVoucherListPartial.cshtml", Model)
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editVoucherModalContainer"></div>
<div id="addVoucherModalContainer"></div>


