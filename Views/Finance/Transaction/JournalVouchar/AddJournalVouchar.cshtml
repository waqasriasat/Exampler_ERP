@model Exampler_ERP.Models.Temp.JournalVoucharIndexViewModel

<style>
    .ui-autocomplete {
        z-index: 1000 !important;
    }
</style>

<div class="modal fade" id="addVoucharModal" tabindex="-1" role="dialog" aria-labelledby="addVoucharModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="--bs-modal-width: 80rem;">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addVoucharModalLabel"><i class="fas fa-key me-2"></i>Add Journal Vouchar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addVoucharForm" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Vouchars.VoucharTypeID" class="form-label fw-bold">Vouchar Type</label>
                            <select asp-for="Vouchars.VoucharTypeID" class="form-select form-select-lg">
                                <option value="">Select Vouchar Type</option>
                                @foreach (var type in ViewBag.VoucharTypeList)
                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="Vouchars.PONo" class="form-label fw-bold">PO No</label>
                            <input asp-for="Vouchars.PONo" type="text" class="form-control form-control-lg" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vouchars.GRNNo" class="form-label fw-bold">GRN No</label>
                            <input asp-for="Vouchars.GRNNo" type="text" class="form-control form-control-lg" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vouchars.DCNo" class="form-label fw-bold">DC No</label>
                            <input asp-for="Vouchars.DCNo" type="text" class="form-control form-control-lg" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Vouchars.InvoiceNo" class="form-label fw-bold">Invoice No</label>
                            <input asp-for="Vouchars.InvoiceNo" type="text" class="form-control form-control-lg" />
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Vouchars.Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Vouchars.Description" class="form-control form-control-lg" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered" id="JournalVoucharTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Transaction Type</th>
                                    <th>Transaction Account</th>
                                    <th>Debit Amount</th>
                                    <th>Credit Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Vouchars.VoucharDetails != null && Model.Vouchars.VoucharDetails.Count > 0)
                                {
                                    for (int i = 0; i < Model.Vouchars.VoucharDetails.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <select class="form-select transaction-account" name="Vouchars.VoucharDetails[@i].TransactionTypeID">
                                                    <option value="">Select Type</option>
                                                    @foreach (var type in ViewBag.TransactionTypeList)
                                                    {
                                                        <option value="@type.Value">@type.Text</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <select class="form-select transaction-account" name="Vouchars.VoucharDetails[@i].HeadofAccount_FiveID">
                                                    <option value="">Select Account</option>
                                                    @foreach (var type in ViewBag.HeadofAccount_FiveList)
                                                    {
                                                        <option value="@type.Value">@type.Text</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control debit" name="Vouchars.VoucharDetails[@i].DrAmt" value="@Model.Vouchars.VoucharDetails[i].DrAmt" />
                                            </td>
                                            <td>
                                                <input type="text" class="form-control credit" name="Vouchars.VoucharDetails[@i].CrAmt" value="@Model.Vouchars.VoucharDetails[i].CrAmt" />
                                            </td>
                                            <td style="text-align: center;">
                                                @if (i == 0)
                                                {
                                                    <button type="button" class="btn btn-sm btn-secondary add-row">Add</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger remove-row">Remove</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            <select class="form-select transaction-account" name="Vouchars.VoucharDetails[0].TransactionTypeID">
                                                <option value="">Select Type</option>
                                                @foreach (var type in ViewBag.TransactionTypeList)
                                                {
                                                    <option value="@type.Value">@type.Text</option>
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            <select class="form-select transaction-account" name="Vouchars.VoucharDetails[0].HeadofAccount_FiveID">
                                                <option value="">Select Account</option>
                                                @foreach (var type in ViewBag.HeadofAccount_FiveList)
                                                {
                                                    <option value="@type.Value">@type.Text</option>
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control debit" name="Vouchars.VoucharDetails[0].DrAmt" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control credit" name="Vouchars.VoucharDetails[0].CrAmt" />
                                        </td>
                                        <td style="text-align: center;">
                                            <button type="button" class="btn btn-sm btn-secondary add-row">Add</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Total Debit Amount</label>
                            <input id="TotalDrAmt" class="form-control form-control-lg" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Total Credit Amount</label>
                            <input id="TotalCrAmt" class="form-control form-control-lg" readonly />
                        </div>
                    </div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="saveNewVouchar" class="btn btn-success">Save Vouchar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        function calculateTotals() {
            let totalDebit = 0;
            let totalCredit = 0;

            $('#JournalVoucharTable tbody tr').each(function () {
                const debit = parseFloat($(this).find('.debit').val()) || 0;
                const credit = parseFloat($(this).find('.credit').val()) || 0;

                totalDebit += debit;
                totalCredit += credit;
            });

            $('#TotalDrAmt').val(totalDebit.toFixed(2));
            $('#TotalCrAmt').val(totalCredit.toFixed(2));

            if (totalDebit !== totalCredit) {
                $('#saveNewVouchar').prop('disabled', true);
            } else {
                $('#saveNewVouchar').prop('disabled', false);
            }
        }

        function updateRowButtons() {
            const rows = $('#JournalVoucharTable tbody tr');
            rows.find('.add-row').remove();
            rows.find('.remove-row').remove();

            rows.each(function (index) {
                const isLastRow = index === rows.length - 1;
                const actionCell = $(this).find('td:last-child');
                if (isLastRow) {
                    actionCell.append('<button type="button" class="btn btn-sm btn-secondary add-row">Add</button>');
                } else {
                    actionCell.append('<button type="button" class="btn btn-sm btn-danger remove-row">Remove</button>');
                }
            });
        }

        $(document).on('input', '.debit, .credit', calculateTotals);

        $(document).on('click', '.add-row', function () {
            const tableBody = $('#JournalVoucharTable tbody');
            const rowCount = tableBody.find('tr').length;

            const newRow = `<tr>
                <td>
                    <select class="form-select transaction-account" name="Vouchars.VoucharDetails[${rowCount}].TransactionTypeID">
                        <option value="">Select Type</option>
    @foreach (var type in ViewBag.TransactionTypeList)
    {
                                <option value="@type.Value">@type.Text</option>
    }
                    </select>
                </td>
                <td>
                    <select class="form-select transaction-account" name="Vouchars.VoucharDetails[${rowCount}].HeadofAccount_FiveID">
                        <option value="">Select Account</option>
    @foreach (var type in ViewBag.HeadofAccount_FiveList)
    {
                                <option value="@type.Value">@type.Text</option>
    }
                    </select>
                </td>
                <td>
                    <input type="text" class="form-control debit" name="Vouchars.VoucharDetails[${rowCount}].DrAmt" />
                </td>
                <td>
                    <input type="text" class="form-control credit" name="Vouchars.VoucharDetails[${rowCount}].CrAmt" />
                </td>
                <td style="text-align: center;"></td>
            </tr>`;

            tableBody.append(newRow);

            updateRowButtons();
            calculateTotals();
        });

        $(document).on('click', '.remove-row', function () {
            $(this).closest('tr').remove();
            updateRowButtons();
            calculateTotals();
        });

        // Initial button setup
        updateRowButtons();
    });

</script>
