@model IEnumerable<Exampler_ERP.Models.Temp.ContractEndDaysViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["lbl_Reports"] + " - " + Localizer["lbl_ContractExpiry"];
}
 
@section PageScripts {
    <script>
        $(document).ready(function () {


            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
            $.widget("custom.autocomplete", $.ui.autocomplete, {
                _renderItem: function (ul, item) {
                    return $("<li>")
                        .append(item.label)  // Render the HTML content in `label`
                        .appendTo(ul);
                }
            });

            $("#EmployeeName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("GetEmployeeSuggestions", "Employee")',
                        type: 'GET',
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return {
                                    label: item.label,  // HTML content
                                    value: item.id      // Employee ID
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    // Do something when an employee is selected
                    console.log(ui.item.value); // Employee ID
                    window.location.href = '@Url.Action("Index", "ContractExpiry")?id=' + ui.item.value;
                }
            });
        });

        function printVacations() {
            var printWindow = window.open('@Url.Action("Print", "ContractExpiry")', '_blank');
            printWindow.focus();
        }
        $('#searchEmployeeButton').click(function () {
            var searchValue = $('#searchEmployeeInput').val();
            window.location.href = '@Url.Action("Index", "ContractExpiry")?id=' + searchValue;
        });
    </script>
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">@Localizer["lbl_Reports"]  /</span> @Localizer["lbl_ContractExpiry"]
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="@Localizer["lbl_SearchEmployee"]" id="searchEmployeeInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchEmployeeButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>

                    </div>
                    <div class="col-md-4 text-end">
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "ContractExpiry")'">@Localizer["lbl_Excel"]</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printVacations()">@Localizer["lbl_Print"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">@Localizer["lbl_ContractExpiryList"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-4">
                            <p class="text-nowrap">@Localizer["lbl_EmployeeName"]</p>
                        </div>
                        <div class="col-2">
                            <p class="text-nowrap">@Localizer["lbl_Branch"]</p>
                        </div>
                        <div class="col-2">
                            <p class="text-nowrap"> @Localizer["lbl_Department"]</p>
                        </div>
                        <div class="col-2">
                            <p class="text-nowrap">@Localizer["lbl_ContractType"]</p>
                        </div>
                        <div class="col-2">
                            <p class="text-nowrap">@Localizer["lbl_RemainingEndDays"]</p>
                        </div>
                    </div>
                </div>

                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-4">
                                <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_EmployeeName"] : </span>@item.EmployeeName</p>
                            </div>
                            <div class="col-2">
                                <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_BranchName"]: </span>@item.BranchName</p>
                            </div>
                            <div class="col-2">
                                <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_Department"]: </span>@item.DepartmentName</p>
                            </div>
                            <div class="col-2">
                                <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_ContractType"]: </span>@item.ContractTypeName</p>
                            </div>
                            <div class="col-2">
                                <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_RemainingEndDays"]: </span>@item.EndDays</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

