@model IEnumerable<Exampler_ERP.Models.Temp.VacationReportViewModel>

@{
    ViewData["Title"] = "Reports - Vacation Report";
}

@section PageScripts {
    <script>
        $(document).ready(function () {


            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });

            $.widget("custom.autocomplete", $.ui.autocomplete, {
                _renderItem: function (ul, item) {
                    return $("<li>")
                        .append(item.label)  // Render the HTML content in `label`
                        .appendTo(ul);
                }
            });

            $("#searchEmployeeInput").autocomplete({
                source: function (request, response) {

                    $.ajax({
                        url: '@Url.Action("GetEmployeeSuggestions", "Employee")', // Ensure this matches the C# method
                        type: 'GET',
                        data: { term: request.term },
                        success: function (data) {

                            response($.map(data, function (item) {
                                return {
                                    label: item.label,  // HTML content to be displayed in suggestions
                                    id: item.id,     // Employee ID for the hidden input
                                    name: item.name,      // Full name to be used in the input field
                                    value: item.name
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    
                    // Set the selected employee's ID and name
                    $("#EmployeeID").val(ui.item.id); // Set the hidden input for Employee ID
                    $("#searchEmployeeInput").val(ui.item.name); // Set the input field for Employee Name
                }
            });
        });

        function printVacations() {
            var printWindow = window.open('@Url.Action("Print", "VacationReport")', '_blank');
            printWindow.focus();
        }
    </script>
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Reports /</span> Vacation Report
</h4>
<form method="get" action="@Url.Action("Index", "VacationReport")">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">Search Box</h5>
                <div class="Searching-Box-padding" style="padding-bottom: 15px;">
                    <div class="row mb-4">
                        <!-- From Date Field -->
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">From Date</label>
                            <input class="form-control" type="date" name="FromDate" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <!-- To Date Field -->
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">To Date</label>
                            <input class="form-control" type="date" name="ToDate" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <!-- Employee Name Search Field -->
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">Employee Name</label>
                            <input type="text" class="form-control" id="searchEmployeeInput" placeholder="Search Employee" name="EmployeeName" value="@ViewBag.EmployeeName" />
                            <input type="hidden" class="form-control" id="EmployeeID" placeholder="Search Employee" name="EmployeeID" value="@ViewBag.EmployeeID" />
                        </div>

                        <!-- Vacation Type Dropdown -->
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">Vacation Type</label>
                            <select name="VacationTypeID" class="form-control">
                                @foreach (var item in ViewBag.VacationTypeList)

                                {

                                    if (item.Value == ViewBag.VacationTypeID?.ToString())

                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }

                                    else

                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }

                                }
                            </select>
                        </div>

                    </div>

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "Vacation")'">Excel</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="printVacations()">Print</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Vacation Report List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                            <div class="row">

                                <div class="col-4">
                                    <p class="text-nowrap">Employee Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Start Date</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">End Date</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Total Days</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Type of Vacation</p>
                                </div>
                            </div>
                </div>

                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                                <div class="row">
                                    <div class="col-4">
                                        <p class="text-nowrap"><span class="smallAdd">Employee Name: </span>@item.EmployeeName</p>
                                    </div>
                                    <div class="col-2">
                                        <p class="text-nowrap"><span class="smallAdd">Start Date: </span>@item.StartDate?.ToString("dd-MMM-yyyy")</p>
                                    </div>
                                    <div class="col-2">
                                        <p class="text-nowrap"><span class="smallAdd">End Date: </span>@item.EndDate?.ToString("dd-MMM-yyyy")</p>
                                    </div>
                                    <div class="col-2">
                                        <p class="text-nowrap"><span class="smallAdd">Total Days: </span>@item.TotalDays</p>
                                    </div>
                                    <div class="col-2">
                                        <p class="text-nowrap"><span class="smallAdd">Type of Vacation: </span>@item.TypeOfVacation</p>
                                    </div>
                                </div>
                            </div>
                }
            </div>
        </div>
    </div>
</div>

