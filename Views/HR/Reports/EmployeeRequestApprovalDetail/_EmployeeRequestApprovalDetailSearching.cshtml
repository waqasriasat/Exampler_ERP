                        }
                        }
                        </select>
                        </div> *@

                    </div>

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "EmployeeRequestTypeApproval")'">Export to @Localizer["lbl_Excel"]</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="printEmployeeRequestTypeApprovals()">@Localizer["lbl_Print"]</button>
