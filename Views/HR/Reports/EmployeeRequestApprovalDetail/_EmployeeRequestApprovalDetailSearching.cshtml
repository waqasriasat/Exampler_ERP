@model IEnumerable<Exampler_ERP.Models.HR_EmployeeRequestTypeApprovalDetail>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form id="searchEmployeeForm" method="get" action="@Url.Action("Index", "EmployeeRequestApprovalDetail")">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
                <div class="Searching-Box-padding" style="padding-bottom: 15px;">
                    <div class="row mb-4">
                        <!-- From Date Field -->
                        <div class="col-md-2 mb-2">
                            <label class="form-label fw-bold">@Localizer["lbl_FromDate"]</label>
							<input class="form-control" type="date" name="FromDate" id="FromDate" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <!-- To Date Field -->
                        <div class="col-md-2 mb-2">
                            <label class="form-label fw-bold">@Localizer["lbl_ToDate"]</label>
							<input class="form-control" type="date" name="ToDate" id="ToDate" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <!-- Employee Name Search Field -->
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-bold">@Localizer["lbl_EmployeeName"]</label>
                            <input type="text" class="form-control" id="EmployeeName" placeholder="@Localizer["lbl_SearchEmployee"]" name="EmployeeName" value="@ViewBag.EmployeeName" />
                            <input type="hidden" class="form-control" id="EmployeeID" placeholder="@Localizer["lbl_SearchEmployee"]" name="EmployeeID" value="@ViewBag.EmployeeID" />
                        </div>

                        <!-- EmployeeRequest Type Dropdown -->
                        <div class="col-md-2 mb-2">
                            <label class="form-label fw-bold">@Localizer["lbl_EmployeeRequestType"]</label>
							<select name="EmployeeRequestTypeID" id="EmployeeRequestTypeID" class="form-control">
                                @foreach (var item in ViewBag.EmployeeRequestTypeList)
                                {
                                    if (item.Value == ViewBag.EmployeeRequestTypeID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2 mb-2">
                            <label class="form-label fw-bold">@Localizer["lbl_Status"]</label>
							<select name="Status" id="Status" class="form-control">
                                @foreach (var item in ViewBag.StatusList)
                                {
                                    if (item.Value == ViewBag.Status?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>

                       
                    </div>

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">@Localizer["lbl_Search"]</button>
							<button type="button" class="btn btn-outline-secondary" onclick="excelEmployeeRequestTypeApproval()">@Localizer["lbl_Excel"]</button>
							<button type="button" class="btn btn-outline-secondary" onclick="printEmployeeRequestTypeApproval()">@Localizer["lbl_Print"]</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
