@model IEnumerable<Exampler_ERP.Models.HR_EmployeeRequestTypeApprovalDetail>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{

    var lblEmployeeName = Localizer["lbl_EmployeeName"];
    var lblEmployeeRequestType = Localizer["lbl_EmployeeRequestType"];
    var lblRank = Localizer["lbl_Rank"];
    var lblPendingDate = Localizer["lbl_PendingDate"];
    var lblApproval = Localizer["lbl_Approval"];
    var lblDetails = Localizer["lbl_Details"];
}

@foreach (var item in Model)
{
    <div class="col-12 col-md-12 col-lg-12 GVDetail">
        <div class="row">
            <div class="col-11 col-md-11 col-lg-10">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-4">
                        <p class="text-nowrap"><span class="smallAdd">@lblEmployeeName : </span>@item.HR_EmployeeRequestTypeApproval?.Employee?.FirstName @item.HR_EmployeeRequestTypeApproval?.Employee?.FatherName @item.HR_EmployeeRequestTypeApproval?.Employee?.FamilyName</p>
                    </div>
                    <div class="col-12 col-md-12 col-lg-3">
                        <p class="text-nowrap"><span class="smallAdd">@lblEmployeeRequestType : </span>@(item.HR_EmployeeRequestTypeApproval?.EmployeeRequestType?.EmployeeRequestTypeName ?? "N/A")  </p>
                    </div>
                    <div class="col-12 col-md-12 col-lg-2">
                        <p class="text-nowrap"><span class="smallAdd">@lblRank : </span>@Html.DisplayFor(modelItem => item.Rank)</p>
                    </div>
                    <div class="col-12 col-md-12 col-lg-2">
                        <p class="text-nowrap"><span class="smallAdd">@lblPendingDate : </span>@item.Date.ToString("dd-MM-yyyy HH:mm:ss")</p>
                    </div>
                </div>
            </div>
            <div class="col-1 col-md-1 col-lg-2">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-6">
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="javascript:void(0)" class="approvalsEmployeeRequestTypeApprovalLink" data-id="@item.EmployeeRequestTypeApprovalID">
                                <i class="bx bx-book-open" style="font-size: large; color:steelblue; line-height: 2;"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 col-lg-6">
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="javascript:void(0)" class="detailsEmployeeRequestTypeApprovalLink" data-id="@item.EmployeeRequestTypeApprovalID">
                                <i class="bx bx-detail" style="font-size: large; color:maroon; line-height: 2;"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
