@model IEnumerable<Exampler_ERP.Models.CR_FaceAttendance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["lbl_Reports"] + " - " + Localizer["lbl_FaceAttendanceReport"];
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
            $.widget("custom.autocomplete", $.ui.autocomplete, {
                _renderItem: function (ul, item) {
                    return $("<li>")
                        .append(item.label)  // Render the HTML content in `label`
                        .appendTo(ul);
                }
            });


            $("#EmployeeName").autocomplete({
                source: function (request, response) {
					$("#EmployeeID").val("");
                    $.ajax({
                        url: '@Url.Action("GetEmployeeSuggestions", "Employee")', // Ensure this matches the C# method
                        type: 'GET',
                        data: { term: request.term },
                        success: function (data) {

                            response($.map(data, function (item) {
                                return {
                                    label: item.label,  // HTML content to be displayed in suggestions
                                    id: item.id,     // Employee ID for the hidden input
                                    name: item.name,      // Full name to be used in the input field
                                    value: item.name
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    
                    // Set the selected employee's ID and name
                    $("#EmployeeID").val(ui.item.id); // Set the hidden input for Employee ID
                    $("#EmployeeName").val(ui.item.name); // Set the input field for Employee Name
                }
            });
			$('#searchEmployeeForm').submit(function (e) {
				e.preventDefault(); // Prevent full page reload

				var form = $(this);
				var actionUrl = form.attr('action');

				// Serialize form data
				var formData = form.serialize();

				$.get(actionUrl, formData, function (partialHtml) {
					// Load only the relevant part of the response
					var html = $(partialHtml).find('#FaceAttendanceReportListContainer').html();
					$('#FaceAttendanceReportListContainer').html(html);
				});
			});
        });
    </script>
    <script>
    	
		function printFaceAttendanceReport() {
			  var form = $('<form target="_blank" method="POST" action="@Url.Action("Print", "FaceAttendanceReport")"></form>');
			  form.append($('<input>').attr('name', 'DayID').val($('#DayID').val()));
			  form.append($('<input>').attr('name', 'MonthsTypeID').val($('#MonthsTypeID').val()));
			  form.append($('<input>').attr('name', 'YearsTypeID').val($('#YearsTypeID').val()));
			  form.append($('<input>').attr('name', 'EmployeeID').val($('#EmployeeID').val()));
			  $('body').append(form);
			  form.submit();
			  form.remove();
		  }

		  function excelFaceAttendanceReport() {
			  var form = $('<form target="_blank" method="POST" action="@Url.Action("ExportToExcel", "FaceAttendanceReport")"></form>');
			  form.append($('<input>').attr('name', 'DayID').val($('#DayID').val()));
			  form.append($('<input>').attr('name', 'MonthsTypeID').val($('#MonthsTypeID').val()));
			  form.append($('<input>').attr('name', 'YearsTypeID').val($('#YearsTypeID').val()));
			  form.append($('<input>').attr('name', 'EmployeeID').val($('#EmployeeID').val()));
			  $('body').append(form);
			  form.submit();
			  form.remove();
		  }
        $('#searchEmployeeButton').click(function () {
            var searchValue = $('#searchEmployeeInput').val();
            window.location.href = '@Url.Action("Index", "FaceAttendanceReport")?id=' + searchValue;
        });
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">@Localizer["lbl_Reports"] /</span> @Localizer["lbl_FaceAttendanceReport"]
</h4>
<form id="searchEmployeeForm" method="get" action="@Url.Action("Index", "FaceAttendanceReport")">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
                <div class="Searching-Box-padding" style="padding-bottom: 15px;">
                    <div class="row mb-4">
						<!-- From Date - Day Dropdown -->
						<div class="col-md-3 mb-3">
							<label class="form-label fw-bold">@Localizer["lbl_Date"]</label>
							<select name="DayID" id="DayID" class="form-control">
								<option value="0">Select Date</option>
								@for (int day = 1; day <= 31; day++)
								{
									if (day == ViewBag.SelectedDay)
									{
										<option value="@day" selected>@day</option>
									}
									else
									{
										<option value="@day">@day</option>
									}
								}
							</select>
						</div>
                        <!-- From Date Field -->
						<div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">@Localizer["lbl_Month"]</label>
                            <select name="MonthsTypeID" id="MonthsTypeID" class="form-control">
                                @foreach (var item in ViewBag.MonthsTypeList)
                                {
                                    if (item.Value == ViewBag.MonthsTypeID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- To Date Field -->
						<div class="col-md-3 mb-3">
                            <label for="YearsTypeID" class="form-label fw-bold">@Localizer["lbl_Year"]</label>
                            <select name="YearsTypeID" id="YearsTypeID" class="form-control">
                                @for (int year = DateTime.Now.Year; year >= 1900; year--)
                                {
                                    if (year == (ViewBag.YearsTypeID ?? 0))
                                    {
                                        <option value="@year" selected>@year</option>
                                    }
                                    else
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>
						<div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">@Localizer["lbl_EmployeeName"]</label>
                            <input type="text" class="form-control" id="EmployeeName" placeholder="@Localizer["lbl_SearchEmployee"]" name="EmployeeName" value="@ViewBag.EmployeeName" />
                            <input type="hidden" class="form-control" id="EmployeeID" placeholder="@Localizer["lbl_SearchEmployee"]" name="EmployeeID" value="@ViewBag.EmployeeID" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">@Localizer["lbl_Search"]</button>
							<button type="button" class="btn btn-outline-secondary" onclick="excelFaceAttendanceReport()">@Localizer["lbl_Excel"]</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="printFaceAttendanceReport()">@Localizer["lbl_Print"]</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">@Localizer["lbl_FaceAttendanceList"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_EmployeeName"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_Date"] </p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_InTime"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_OutTime"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_DutyHours"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_DutyMinutes"]</p>
                                </div>
                            </div>
                </div>
				<div id="FaceAttendanceReportListContainer">
					@Html.Partial("~/Views/HR/Reports/FaceAttendanceReport/_FaceAttendanceReportListPartial.cshtml", Model)
				</div>
            </div>
        </div>
    </div>
</div>
