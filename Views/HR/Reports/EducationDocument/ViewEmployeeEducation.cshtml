@model IEnumerable<Exampler_ERP.Models.HR_EmployeeEducation>

<div class="modal fade" id="employeeEducationModal" tabindex="-1" role="dialog" aria-labelledby="employeeEducationModalLabel" aria-hidden="true" style="--bs-modal-width: 60rem;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="employeeEducationModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Education Employee
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <h5 class="card-header">Education Document List</h5>
                        <div class="">
                            <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader form-label">
                                <div class="row">
                                    <div class="col-10 col-md-10 col-lg-9">
                                        <div class="row">
                                            <div class="col-3">
                                                <p class="text-nowrap">Qualification</p>
                                            </div>
                                            <div class="col-6">
                                                <p class="text-nowrap">Institute</p>
                                            </div>
                                            <div class="col-3">
                                                <p class="text-nowrap">City</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2 col-md-2 col-lg-3">
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-lg-7">
                                                <p class="text-nowrap">Download</p>
                                            </div>
                                            <div class="col-12 col-md-12 col-lg-5">
                                                <p class="text-nowrap">View</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @foreach (var item in Model)

                            {
                                <div class="col-12 col-md-12 col-lg-12 GVDetail">
                                    <div class="row">
                                        <div class="col-11 col-md-10 col-lg-9">
                                            <div class="row">
                                                <div class="col-12 col-md-12 col-lg-3">
                                                    <p class="text-nowrap"><span class="smallAdd">Qualification: </span>@item.QualificationType?.QualificationTypeName</p>
                                                </div>
                                                <div class="col-12 col-md-12 col-lg-6">
                                                    <p class="text-nowrap"><span class="smallAdd">Institute: </span>@item.InstituteName</p>
                                                </div>
                                                <div class="col-12 col-md-12 col-lg-3">
                                                    <p class="text-nowrap"><span class="smallAdd">City: </span>@item.City</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-1 col-md-2 col-lg-3">
                                            <div class="row">
                                                <div class="col-12 col-md-12 col-lg-7">
                                                    <div class="btn-group" role="group" aria-label="Actions">
                                                        <a href="@Url.Action("EducationDocumentDownload", "EducationDocument", new { id = item.EducationID })">
                                                            <i class="fa fa-download" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-12 col-lg-5">
                                                    <div class="btn-group" role="group" aria-label="Actions">
                                                        <a href="@Url.Action("EducationDocumentView", "EducationDocument", new { id = item.EducationID })">
                                                            <i class="fa fa-eye" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Partial view for listing education records -->
