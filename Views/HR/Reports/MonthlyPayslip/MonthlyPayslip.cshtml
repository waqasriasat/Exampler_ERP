@model Exampler_ERP.Models.Temp.MonthlyPayrollPrintViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@section PageScripts {
	<script>
		$(document).ready(function () {

			$('#printButton').click(function () {
							window.print();
						});

			$('#searchMonthlyPayslipListForm').submit(function (e) {
					e.preventDefault(); // Prevent full page reload

					var form = $(this);
					var actionUrl = form.attr('action');

					// Serialize form data
					var formData = form.serialize();

					$.get(actionUrl, formData, function (partialHtml) {
						// Load only the relevant part of the response
						var html = $(partialHtml).find('#MonthlyPayslipListContainer').html();
						$('#MonthlyPayslipListContainer').html(html);
					});
				});
			});

	</script>
	<script>
		function printMonthlyPayslips() {
			  var form = $('<form target="_blank" method="POST" action="@Url.Action("Print", "MonthlyPayslip")"></form>');
			  form.append($('<input>').attr('name', 'Branch').val($('#Branch').val()));
			  form.append($('<input>').attr('name', 'MonthsTypeID').val($('#MonthsTypeID').val()));
			  form.append($('<input>').attr('name', 'YearsTypeID').val($('#YearsTypeID').val()));
			  $('body').append(form);
			  form.submit();
			  form.remove();
		  }
	</script>
}
<h4 class="py-3 mb-4">
	<span class="text-muted fw-light">@Localizer["lbl_Reports"]  /</span> @Localizer["lbl_MonthlyPayslip"]
</h4>
<form id="searchMonthlyPayslipListForm" method="get" action="@Url.Action("Index", "MonthlyPayslip")">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
				<div class="Searching-Box-padding" style="padding-bottom: 15px;">
					<div class="row mb-4">
						<!-- From Date Field -->
						<div class="col-md-4 mb-4">
							<label class="form-label fw-bold">@Localizer["lbl_Month"]</label>
							<select id="MonthsTypeID" name="MonthsTypeID" class="form-control">
								@foreach (var item in ViewBag.MonthsTypeList)
								{
									if (item.Value == ViewBag.MonthsTypeID?.ToString())
									{
										<option value="@item.Value" selected>@item.Text</option>
									}
									else
									{
										<option value="@item.Value">@item.Text</option>
									}
								}
							</select>
						</div>
						<!-- To Date Field -->
						<div class="col-md-4 mb-4">
							<label for="YearsTypeID" class="form-label fw-bold">@Localizer["lbl_Year"]</label>
							<select id="YearsTypeID" name="YearsTypeID" class="form-control">
								@for (int year = DateTime.Now.Year; year >= 1900; year--)
								{
									if (year == (ViewBag.YearsTypeID ?? 0))
									{
										<option value="@year" selected>@year</option>
									}
									else
									{
										<option value="@year">@year</option>
									}
								}
							</select>
						</div>
						<div class="col-md-4 mb-4">
							<label class="form-label fw-bold">@Localizer["lbl_Branch"]</label>
							<select id="Branch" name="Branch" class="form-control">
								@foreach (var item in ViewBag.BranchList)
								{
									if (item.Value == ViewBag.BranchID?.ToString())
									{
										<option value="@item.Value" selected>@item.Text</option>
									}
									else
									{
										<option value="@item.Value">@item.Text</option>
									}
								}
							</select>
						</div>
					</div>
					<!-- Action Buttons -->
					<div class="row">
						<div class="col-md-12 text-end">
							<button type="submit" class="btn btn-primary">@Localizer["lbl_Search"]</button>
							<button type="button" class="btn btn-outline-secondary" onclick="printMonthlyPayslips()">@Localizer["lbl_Print"]</button>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</form>
<br />
<div id="MonthlyPayslipListContainer">
	@Html.Partial("~/Views/HR/Reports/MonthlyPayslip/_ViewMonthlyPayslip.cshtml", Model)
</div>
