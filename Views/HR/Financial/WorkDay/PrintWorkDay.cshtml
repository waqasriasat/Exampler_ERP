@model IEnumerable<Exampler_ERP.Models.HR_WorkDay>

<!DOCTYPE html>
<html>
<head>
    <title>Print WorkDays</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>WorkDay List</h2>
    <table>
        <thead>
            <tr>
                <th>WorkDay ID</th>
                <th>Employee Name</th>
                <th>Month</th>
                <th>Year</th>
                <th>Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var WorkDay in Model)
            {
                <tr>
                    <td>@WorkDay.WorkDayID</td>
                    <td>@($"{WorkDay.Employee?.FirstName} {WorkDay.Employee?.FatherName} {WorkDay.Employee?.FamilyName}")</td>
                    <td>@WorkDay.Month</td>
                    <td>@WorkDay.Year</td>
                    <td>@WorkDay.Days</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
