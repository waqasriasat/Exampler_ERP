@{
    ViewData["Title"] = "Human Resources - Finance";
}

@section PageScripts {
    <script src="~/js/pages-account-settings-account.js"></script>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Human Resources /</span> Finance
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" href="~/Main_Dashboard/Index"><i class="bx bx-user me-1"></i> Main</a></li>
            <li class="nav-item"><a class="nav-link" href="~/Employeement_Dashboard/Index"><i class="bx bx-bell me-1"></i> Employeement</a></li>
            <li class="nav-item"><a class="nav-link" href="~/HR_Dashboard/Index"><i class="bx bx-link-alt me-1"></i> HR</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-bell me-1"></i> Finance</a></li>
            <li class="nav-item"><a class="nav-link" href="~/Report_Dashboard/Index"><i class="bx bx-link-alt me-1"></i> Report</a></li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">Details</h5>
            <div class="row" style="padding: 30px 30px 0px 30px;">
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="WorkDay" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Work Days</strong>
                                    <h4 class="font-weight-bold text-dark">0</h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-print Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="FixedDeduction" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Fixed Deduction</strong>
                                    <h4 class="font-weight-bold text-dark">0</h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-book Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a href="#">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Hourly Salary Sheet</strong>
                                    <h4 class="font-weight-bold text-dark">0</h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-print Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a href="#">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Monthly Salary Sheet</strong>
                                    <h4 class="font-weight-bold text-dark">0</h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-file Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
