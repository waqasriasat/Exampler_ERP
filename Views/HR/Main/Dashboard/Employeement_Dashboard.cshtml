@{
    ViewData["Title"] = "Human Resources - Employeement";
}

@section PageScripts {
    <script src="~/js/pages-account-settings-account.js"></script>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Human Resources /</span> Employeement
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link" href="~/Main_Dashboard/Index"><i class="bx bx-home me-1"></i> Main</a></li>
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-briefcase me-1"></i> Employeement</a></li>
            <li class="nav-item"><a class="nav-link" href="~/HR_Dashboard/Index"><i class="bx bx-group me-1"></i> HR</a></li>
            <li class="nav-item"><a class="nav-link" href="~/Finance_Dashboard/Index"><i class="bx bx-dollar me-1"></i> Finance</a></li>
            <li class="nav-item"><a class="nav-link" href="~/Report_Dashboard/Index"><i class="bx bx-bar-chart-alt me-1"></i> Report</a></li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">Details</h5>
            <div class="row" style="padding: 30px 30px 0px 30px;">
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="Applicant" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Applicant</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.ApplicantCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-user-plus Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>

                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="Employee" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Employee</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.EmployeeCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-user-tie Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="Contract" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Contract</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.ContractCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-file-contract Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="Salary" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Salary</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.SalaryCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-money-bill-wave Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="Joining" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Joining</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.JoiningCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-handshake Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="BankAccount" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Bank Account</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.BankAccountCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-building Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="ContractRenewal" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Contract Renewal</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        @ViewBag.ContractRenewwalCount
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-sync-alt Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>


                <div class="col-lg-3 col-md-6 col-sm-12">
                    <a asp-controller="CardPrint" asp-action="Index">
                        <div class="modern-card shadow mb-4">
                            <div class="card-body small-box bg-light rounded-lg p-3 d-flex align-items-center justify-content-between">
                                <div class="card-details">
                                    <strong class="text-primary">Card Print</strong>
                                    <h4 class="font-weight-bold text-dark">
                                        0
                                    </h4>
                                </div>
                                <div class="icon bg-primary text-white">
                                    <i class="fa fa-id-card Card1I" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-muted text-center">
                                View Details <i class="fa fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@* Applicant
Employee
Contract
Salary
Joining
Bank Account
Contract Renewal
Card Print *@
