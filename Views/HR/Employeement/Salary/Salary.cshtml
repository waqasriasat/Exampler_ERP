@model Exampler_ERP.Models.Temp.EmployeeListViewModel

@{
    ViewData["Title"] = "Employeement - Salary";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            $('.editSalaryLink').click(function (e) {
                e.preventDefault();
                var SalaryTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "Salary")', { id: SalaryTypeId }, function (data) {
                    $('#editSalaryModalContainer').html(data);
                    $('#editSalaryModal').modal('show');
                });
            });

            $('#editSalaryModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editSalaryForm').serialize();
                console.log("Serialized form data:", formData); // Log serialized data for debugging
                $.post('@Url.Action("Edit", "Salary")', formData, function (response) {
                    if (response.success) {
                        $('#editSalaryModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Edit Contrainer
            $('#editSalaryModalContainer').on('click', '#Close', function () {
                $('#editSalaryModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });


            // Delete Salary
            $('.deleteSalaryLink').click(function (e) {
                e.preventDefault();
                var SalaryId = $(this).data('id');
                $.post('@Url.Action("Delete", "Salary")', { id: SalaryId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printSalarys() {
            var printWindow = window.open('@Url.Action("Print", "Salary")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Salary
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Salary List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-8 col-md-10 col-lg-7">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Employee Name</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Type Count</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 col-md-2 col-lg-5">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.EmployeeCount)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-7">
                                <div class="row">
                                        <div class="col-12 col-md-12 col-lg-6">
                                            <p class="text-nowrap"><span class="smallAdd">Employee Name : </span>@Html.DisplayFor(modelItem => item.EmployeeName)</p>
                                        </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap"><span class="smallAdd">Type Count : </span>@Html.DisplayFor(modelItem => item.TypeCount)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-5">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editSalaryLink" data-id="@item.EmployeeID">
                                                <i class="fa fa-pencil" style="font-size: x-large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="editSalaryModalContainer"></div>
