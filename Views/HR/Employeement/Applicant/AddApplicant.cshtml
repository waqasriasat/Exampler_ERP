@model Exampler_ERP.Models.HR_Applicant
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addApplicantModal" tabindex="-1" role="dialog" aria-labelledby="addApplicantModalLabel" aria-hidden="true" style="--bs-modal-width: 60rem;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addApplicantModalLabel">
                    <i class="fas fa-key me-2"></i>
                    @Localizer["lbl_AddApplicant"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addApplicantForm" method="post" asp-action="Create" asp-controller="Applicant" enctype="multipart/form-data">
                    <h5 class="modal-title" style="padding-top:10px">@Localizer["lbl_CompanyInformation"]</h5>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-9">
                             <div class="row">
                                <div class="col-4">
                                    <label asp-for="BranchTypeID" class="form-label fw-bold">@Localizer["lbl_SelectBranch"]</label>
                                    <select asp-for="BranchTypeID" asp-items="@(new SelectList(ViewBag.BranchsList, "Value", "Text", Model.BranchTypeID))" class="form-control form-control-lg">
                                    </select>
                                    <span asp-validation-for="BranchTypeID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-12 col-lg-3">
                            <div class="row">
                                <div class="col-12" style="height:150px">
                                    <div class="relative" style="text-align: -webkit-center;">
                                        <img src="~/img/icons/NoImage.jpg" id="PreviewPhoto" alt="Logo Image"
                                             onerror="this.onerror=null; this.src='~/img/icons/noimage.jpg';"
                                             width="125" height="125" style="border:1px; margin-top:0px;border-radius: 50%;" />
                                        <input asp-for="Picture" class="custom-file-input" id="profilePictureInput" type="file" name="profilePicture"
                                               class="form-control form-control-lg" style="display:none;" onchange="document.getElementById('PreviewPhoto').src=window.URL.createObjectURL(this.files[0])" />
                                        <a href="javascript:void(0)" onclick="document.getElementById('profilePictureInput').click()">
                                            <i class="fa fa-pencil" style="font-size: large; color:darkslategray; line-height: 2;position: relative;bottom: -55px;right: 16px;"></i>
                                        </a>
                                        <span asp-validation-for="Picture" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5 class="modal-title" style="padding-top:10px">@Localizer["lbl_ApplicantBiodata"]</h5>
                    <hr />
                    <div class="row">

                        <div class="col-3">
                            <label asp-for="FirstName" class="form-label fw-bold">@Localizer["lbl_FirstName"]</label>
                            <input asp-for="FirstName" class="form-control form-control-lg" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="FatherName" class="form-label fw-bold">@Localizer["lbl_FatherName"]</label>
                            <input asp-for="FatherName" class="form-control form-control-lg" />
                            <span asp-validation-for="FatherName" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="FamilyName" class="form-label fw-bold">@Localizer["lbl_FamilyName"]</label>
                            <input asp-for="FamilyName" class="form-control form-control-lg" />
                            <span asp-validation-for="FamilyName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="Sex" class="form-label fw-bold">@Localizer["lbl_Gender"]</label>
                            <select asp-for="Sex" asp-items="@(new SelectList(ViewBag.GenderList, "Value", "Text"))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="Sex" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="DOB" class="form-label fw-bold">@Localizer["lbl_DOB"]</label>
                            <input asp-for="DOB" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="MaritalStatus" class="form-label fw-bold">@Localizer["lbl_MaritalStatus"]</label>
                            <select asp-for="MaritalStatus" asp-items="@(new SelectList(ViewBag.MaritalStatusList, "Value", "Text"))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="NoOfChildren" class="form-label fw-bold">@Localizer["lbl_NoofChildren"]</label>
                            <input asp-for="NoOfChildren" class="form-control form-control-lg" />
                            <span asp-validation-for="NoOfChildren" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="Phone1" class="form-label fw-bold">@Localizer["lbl_Phone1"]</label>
                            <input asp-for="Phone1" class="form-control form-control-lg" />
                            <span asp-validation-for="Phone1" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Phone2" class="form-label fw-bold">@Localizer["lbl_Phone2"]</label>
                            <input asp-for="Phone2" class="form-control form-control-lg" />
                            <span asp-validation-for="Phone2" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Mobile" class="form-label fw-bold">@Localizer["lbl_Mobile"] </label>
                            <input asp-for="Mobile" class="form-control form-control-lg" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Whatsapp" class="form-label fw-bold">@Localizer["lbl_Whatsapp"]</label>
                            <input asp-for="Whatsapp" class="form-control form-control-lg" />
                            <span asp-validation-for="Whatsapp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-3">
                            <label asp-for="Religion" class="form-label fw-bold">@Localizer["lbl_Religion"]</label>
                            <select asp-for="Religion" asp-items="@(new SelectList(ViewBag.ReligionList, "Value", "Text"))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="Religion" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="PlaceOfBirth" class="form-label fw-bold">@Localizer["lbl_PlaceofBirth"]</label>
                            <input asp-for="PlaceOfBirth" class="form-control form-control-lg" />
                            <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="CountryID" class="form-label fw-bold">@Localizer["lbl_Country"] </label>
                            <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountriesList, "Value", "Text"))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="CountryID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="Fax" class="form-label fw-bold">@Localizer["lbl_Fax"] </label>
                            <input asp-for="Fax" class="form-control form-control-lg" />
                            <span asp-validation-for="Fax" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Email" class="form-label fw-bold">@Localizer["lbl_Email"]</label>
                            <input asp-for="Email" class="form-control form-control-lg" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="POBox" class="form-label fw-bold">@Localizer["lbl_POBox"]</label>
                            <input asp-for="POBox" class="form-control form-control-lg" />
                            <span asp-validation-for="POBox" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label asp-for="Address" class="form-label fw-bold">@Localizer["lbl_Address"] </label>
                            <textarea asp-for="Address" class="form-control form-control-lg" rows="4"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <h5 class="modal-title" style="padding-top:10px">@Localizer["lbl_IDInfomation"]</h5>
                        <hr />
                        <div class="col-3">
                            <label asp-for="IDNumber" class="form-label fw-bold">@Localizer["lbl_IDNumber"]</label>
                            <input asp-for="IDNumber" class="form-control form-control-lg" />
                            <span asp-validation-for="IDNumber" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="IDPlaceOfIssue" class="form-label fw-bold">@Localizer["lbl_IDPlaceofIssue"]</label>
                            <input asp-for="IDPlaceOfIssue" class="form-control form-control-lg" />
                            <span asp-validation-for="IDPlaceOfIssue" class="text-danger"></span>
                        </div>
                     </div>
                    <br />
                    <div class="row">
                        <h5 class="modal-title" style="padding-top:10px">@Localizer["lbl_PassportInfomation"]</h5>
                        <hr />
                        <div class="col-3">
							<label asp-for="PassportNumber" class="form-label fw-bold">@Localizer["lbl_PassportNumber"]</label>
                            <input asp-for="PassportNumber" class="form-control form-control-lg" />
                            <span asp-validation-for="PassportNumber" class="text-danger"></span>
                        </div>
                        <div class="col-3">
							<label asp-for="PassportPlaceOfIssue" class="form-label fw-bold">@Localizer["lbl_PassportPlaceofIssue"]</label>
                            <input asp-for="PassportPlaceOfIssue" class="form-control form-control-lg" />
                            <span asp-validation-for="PassportPlaceOfIssue" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <input type="hidden" asp-for="ApplicantID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewApplicant">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>
