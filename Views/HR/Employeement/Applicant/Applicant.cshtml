                        </div>
                    </div>
                </div>
				<div id="ApplicantListContainer">
					@Html.Partial("~/Views/HR/Employeement/Applicant/_ApplicantListPartial.cshtml", Model)
				</div>
            </div>

          
        </div>
    </div>
</div>

