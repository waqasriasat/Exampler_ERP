@model IEnumerable<Exampler_ERP.Models.HR_Applicant>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = @Localizer["lbl_Employeement"] + " - " + @Localizer["lbl_Applicant"];
}

@section PageScripts {
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css" rel="stylesheet">
    <script>
        $(document).ready(function () {
            // Edit Applicant modal popup
			 $('#ApplicantListContainer').on('click', '.editApplicantLink', function (e) {
                e.preventDefault();
                var ApplicantId = $(this).data('id');
                $.get('@Url.Action("Edit", "Applicant")', { id: ApplicantId }, function (data) {
                    $('#editApplicantModalContainer').html(data);
                    $('#editApplicantModal').modal('show');
                });
            });
            
            $('#editApplicantModalContainer').on('click', '#saveApplicantChanges', function () {
                var form = $('#editApplicantForm')[0]; 
                var formData = new FormData(form);

                $.ajax({
                    url: '@Url.Action("Edit", "Applicant")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
						if (response.success) {
							$('#editApplicantModal').modal('hide');

							// ✅ Ab poora list AJAX se reload karo
							$.get('@Url.Action("Index", "Applicant")', function (partialHtml) {
								var html = $(partialHtml).find('#ApplicantListContainer').html();
								$('#ApplicantListContainer').html(html);
							});
						}
                    },
                    error: function () {
                        showError
                    }
                });
            });

            // Add new Applicant modal popup
            $('.addApplicantLink').click(function () {
                $.get('@Url.Action("Create", "Applicant")', function (data) {
                    $('#addApplicantModalContainer').html(data);
                    $('#addApplicantModal').modal('show');
                });
            });



            // // Save new Applicant form
            $('#addApplicantModalContainer').on('click', '#saveNewApplicant', function () {
                var form = document.getElementById('addApplicantForm');
                var formData = new FormData(form);

                $.ajax({
                    url: '@Url.Action("Create", "Applicant")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
					   if (response.success) {
							$('#addApplicantModal').modal('hide');

							// ✅ Ab poora list AJAX se reload karo
							$.get('@Url.Action("Index", "Applicant")', function (partialHtml) {
								var html = $(partialHtml).find('#ApplicantListContainer').html();
								$('#ApplicantListContainer').html(html);
							});
						}
                    },
                    error: function () {
                        showError
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addApplicantModalContainer').on('click', '#Close', function () {
                $('#addApplicantModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editApplicantModalContainer').on('click', '#Close', function () {
                $('#editApplicantModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete Applicant
			$('#ApplicantListContainer').on('click', '.deleteApplicantLink', function (e) {
                e.preventDefault();
                var ApplicantId = $(this).data('id');

                // Show confirmation dialog
                if (confirm('Are you sure you want to delete this Applicant?')) {
                    // If user clicks 'Yes', proceed with the deletion
                    $.post('@Url.Action("Delete", "Applicant")', { id: ApplicantId }, function (response) {
					   if (response.success) {
					$.get('@Url.Action("Index", "Applicant")', function (partialHtml) {
					  var html = $(partialHtml).find('#ApplicantListContainer').html();
					  $('#ApplicantListContainer').html(html);
					});
				  }
                    });
                } else {
                    // If user clicks 'No', do nothing
                }
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
            
        });
    </script>
    <script>
        function printApplicants() {
              var form = $('<form target="_blank" method="POST" action="@Url.Action("Print", "Applicant")"></form>');
              form.append($('<input>').attr('name', 'ApplicantID').val($('#ApplicantID').val()));
              form.append($('<input>').attr('name', 'ApplicantName').val($('#ApplicantName').val()));
              form.append($('<input>').attr('name', 'BranchID').val($('#BranchID').val()));
              $('body').append(form);
              form.submit();
              form.remove();
          }

          function excelApplicants() {
              var form = $('<form target="_blank" method="POST" action="@Url.Action("ExportToExcel", "Applicant")"></form>');
              form.append($('<input>').attr('name', 'ApplicantID').val($('#ApplicantID').val()));
              form.append($('<input>').attr('name', 'ApplicantName').val($('#ApplicantName').val()));
              form.append($('<input>').attr('name', 'BranchID').val($('#BranchID').val()));
              $('body').append(form);
              form.submit();
              form.remove();
          }
       
		$(document).on('click', '.PrintApplicantBioDataLink', function (e) {
			e.preventDefault();

			// Get the ApplicantID from the data-id attribute
			var applicantID = $(this).data('id');

			// Call the function to open the print window and pass ApplicantID
			PrintApplicantBioData(applicantID);
		});
		function PrintApplicantBioData(applicantID) {
			// Construct the URL with the ApplicantID parameter
			var url = '@Url.Action("PrintApplicantBioData", "Applicant")' + '?id=' + applicantID;

			// Open the new window for printing
			var printWindow = window.open(url, '_blank');
			printWindow.focus();
		}
        //Close Modal
        function closeModal() {
            $('.close').click(function () {
                $('#addApplicantModal').modal('hide');
                $('#editApplicantModal').modal('hide');
            });
        }

      
        $(document).ready(function () {
            $("#ApplicantName").autocomplete({
                source: function (request, response) {
                    $("#ApplicantID").val("");
                    $.ajax({
                        url: '@Url.Action("GetApplicantSuggestions", "Applicant")', // Ensure this matches the C# method
                        type: 'GET',
                        data: { term: request.term },
                        success: function (data) {

                            response($.map(data, function (item) {
                                return {
                                    label: item.label,  // HTML content to be displayed in suggestions
                                    id: item.id,     // Employee ID for the hidden input
                                    name: item.name,      // Full name to be used in the input field
                                    value: item.name
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {

                    // Set the selected employee's ID and name
                    $("#ApplicantID").val(ui.item.id); // Set the hidden input for Employee ID
                    $("#ApplicantName").val(ui.item.name); // Set the input field for Employee Name
                }
            });
        $('#searchApplicantForm').submit(function (e) {
                e.preventDefault(); // Prevent full page reload

                var form = $(this);
                var actionUrl = form.attr('action');

                // Serialize form data
                var formData = form.serialize();

                $.get(actionUrl, formData, function (partialHtml) {
                    // Load only the relevant part of the response
                    var html = $(partialHtml).find('#ApplicantListContainer').html();
                    $('#ApplicantListContainer').html(html);
                });
            });
        });
    </script>
}

<h4 class="py-3 mb-4">
	<span class="text-muted fw-light">@Localizer["lbl_Employeement"] /</span> @Localizer["lbl_Applicant"]
</h4>
<form id="searchApplicantForm" method="get" action="@Url.Action("Index", "Applicant")">
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">@Localizer["lbl_ApplicantName"]</label>
                            <input type="text" class="form-control" id="ApplicantName" placeholder="@Localizer["lbl_ApplicantName"]" name="ApplicantName" value="@ViewBag.ApplicantName" />
                            <input type="hidden" class="form-control" id="ApplicantID" placeholder="@Localizer["lbl_ApplicantName"]" name="ApplicantID" value="@ViewBag.ApplicantID" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">@Localizer["lbl_BranchName"]</label>
                            <select name="BranchID" id="BranchID" class="form-control">
                                @foreach (var item in ViewBag.BranchsList)
                                {
                                    if (item.Value == ViewBag.BranchID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    
                    <div class="col-md-12 text-end">
                        <!-- Action Buttons -->
                            <button type="submit" class="btn btn-primary">@Localizer["lbl_Search"]</button>
                        <button type="button" class="btn btn-primary addApplicantLink">@Localizer["lbl_AddNew"]</button>
                        <!-- Example: Add buttons for exporting to Excel and printing -->
                        <button type="button" class="btn btn-outline-secondary" onclick="excelApplicants()">@Localizer["lbl_Excel"]</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printApplicants()">@Localizer["lbl_Print"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
<br />
