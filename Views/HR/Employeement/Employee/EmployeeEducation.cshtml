@model Exampler_ERP.Models.Temp.EmployeeEducationViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<script>
    $(document).ready(function () {
        $('.deleteEmployeeEducationLink').click(function (e) {
            e.preventDefault();
            var educationId = $(this).data('id');

            if (confirm('Are you sure you want to delete this Education PDF?')) {
                $.post('@Url.Action("DeleteEmployeeEducation", "Employee")', { id: educationId })
                    .done(function (response) {
                        if (response.success) {
                            $('#employeeEducationModal').modal('hide');

                            // âœ… Ab poora list AJAX se reload karo
                            $.get('@Url.Action("Index", "Employee")', function (partialHtml) {
                                var html = $(partialHtml).find('#EmployeeListContainer').html();
                                $('#EmployeeListContainer').html(html);
                            });
                        } else {
                            alert("Deletion failed. Please try again.");
                        }
                    })
                    .fail(function () {
                        alert("An error occurred while deleting. Please contact support.");
                    });
            }
        });
    });
</script>
<div class="modal fade" id="employeeEducationModal" tabindex="-1" role="dialog" aria-labelledby="employeeEducationModalLabel" aria-hidden="true" style="--bs-modal-width: 60rem;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="employeeEducationModalLabel">
                    <i class="fas fa-key me-2"></i>
             		@Localizer["lbl_EmployeeEducation"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeEducationForm" method="post" asp-action="Education" asp-controller="Employee" enctype="multipart/form-data">
                    <input type="hidden" asp-for="NewEducation.EmployeeID" value="@ViewBag.EmployeeID" />

                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="NewEducation.QualificationTypeID" class="form-label">@Localizer["lbl_Qualification"]</label>
                            <select asp-for="NewEducation.QualificationTypeID" asp-items="@(new SelectList(ViewBag.QualificationTypes, "Value", "Text"))" class="form-control"></select>
                            <span asp-validation-for="NewEducation.QualificationTypeID" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="NewEducation.InstituteName" class="form-label">@Localizer["lbl_Institute"]</label>
                            <input asp-for="NewEducation.InstituteName" class="form-control" />
                            <span asp-validation-for="NewEducation.InstituteName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="NewEducation.City" class="form-label">@Localizer["lbl_City"] </label>
                            <input asp-for="NewEducation.City" class="form-control" />
                            <span asp-validation-for="NewEducation.City" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="NewEducation.CountryTypeID" class="form-label">@Localizer["lbl_Country"] </label>
                            <select asp-for="NewEducation.CountryTypeID" asp-items="@(new SelectList(ViewBag.CountryTypes, "Value", "Text"))" class="form-control"></select>
                            <span asp-validation-for="NewEducation.CountryTypeID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="NewEducation.StartMonth" class="form-label">@Localizer["lbl_StartMonth"]</label>
                            <select asp-for="NewEducation.StartMonth" asp-items="@(new SelectList(ViewBag.MonthTypes, "Value", "Text"))" class="form-control"></select>
                            <span asp-validation-for="NewEducation.StartMonth" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="NewEducation.StartYear" class="form-label">@Localizer["lbl_StartYear"]</label>
                            <input asp-for="NewEducation.StartYear" class="form-control" />
                            <span asp-validation-for="NewEducation.StartYear" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="NewEducation.EndMonth" class="form-label">@Localizer["lbl_EndMonth"]</label>
                            <select asp-for="NewEducation.EndMonth" asp-items="@(new SelectList(ViewBag.MonthTypes, "Value", "Text"))" class="form-control"></select>
                            <span asp-validation-for="NewEducation.EndMonth" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="NewEducation.EndYear" class="form-label">@Localizer["lbl_EndYear"]</label>
                            <input asp-for="NewEducation.EndYear" class="form-control" />
                            <span asp-validation-for="NewEducation.EndYear" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">@Localizer["lbl_Document "] PDF</label>
                        <input type="file" name="pdfFile" accept=".pdf" class="form-control" />
                    </div>
                   
                </form>
            </div>
            <div class="modal-footer" style="padding-top: 20px;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveEmployeeChanges" form="employeeEducationForm">@Localizer["lbl_SaveChanges"]</button>
            </div>
            <div id="EmployeeEducationListContainer">
            @Html.Partial("~/Views/HR/Employeement/Employee/_EmployeeEducation.cshtml", Model.EmployeeEducations)
            </div>
        </div>
    </div>
</div>

<!-- Partial view for listing education records -->

