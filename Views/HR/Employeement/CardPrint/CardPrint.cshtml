@model Exampler_ERP.Models.Temp.EmployeeCardPrintListViewModel

@{
    ViewData["Title"] = "Employeement - CardPrint";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            $('.editCardPrintLink').click(function (e) {
                e.preventDefault();
                var CardPrintTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "CardPrint")', { id: CardPrintTypeId }, function (data) {
                    $('#editCardPrintModalContainer').html(data);
                    $('#editCardPrintModal').modal('show');
                });
            });

            $('#editCardPrintModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editCardPrintForm').serialize();
                console.log("Serialized form data:", formData); // Log serialized data for debugging
                $.post('@Url.Action("Edit", "CardPrint")', formData, function (response) {
                    if (response.success) {
                        $('#editCardPrintModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

         

            // Close Modal Edit Contrainer
            $('#editCardPrintModalContainer').on('click', '#Close', function () {
                $('#editCardPrintModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete CardPrint
            $('.deleteCardPrintLink').click(function (e) {
                e.preventDefault();
                var CardPrintId = $(this).data('id');
                $.post('@Url.Action("Delete", "CardPrint")', { id: CardPrintId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printCardPrints() {
            var printWindow = window.open('@Url.Action("Print", "CardPrint")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Employeement /</span> CardPrint
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">CardPrint List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-8 col-md-10 col-lg-7">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-nowrap">Employee Name</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 col-md-2 col-lg-5">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-nowrap">Print</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.EmployeeCardPrint)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-7">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <p class="text-nowrap"><span class="smallAdd">Employee Name : </span>@Html.DisplayFor(modelItem => item.EmployeeName)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-5">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editCardPrintLink" data-id="@item.EmployeeID">
                                                <i class="fa fa-Print" style="font-size: x-large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="editCardPrintModalContainer"></div>
