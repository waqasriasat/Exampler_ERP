@model Exampler_ERP.Models.Temp.EmployeeJoiningListViewModel

@{
    ViewData["Title"] = "Employeement - Joining";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            $('.editJoiningLink').click(function (e) {
                e.preventDefault();
                var JoiningTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "Joining")', { id: JoiningTypeId }, function (data) {
                    $('#editJoiningModalContainer').html(data);
                    $('#editJoiningModal').modal('show');
                });
            });

            $('#editJoiningModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editJoiningForm').serialize();
                console.log("Serialized form data:", formData); // Log serialized data for debugging
                $.post('@Url.Action("Edit", "Joining")', formData, function (response) {
                    if (response.success) {
                        $('#editJoiningModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Edit Contrainer
            $('#editJoiningModalContainer').on('click', '#Close', function () {
                $('#editJoiningModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });


            // Delete Joining
            $('.deleteJoiningLink').click(function (e) {
                e.preventDefault();
                var JoiningId = $(this).data('id');
                $.post('@Url.Action("Delete", "Joining")', { id: JoiningId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printJoinings() {
            var printWindow = window.open('@Url.Action("Print", "Joining")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Employeement /</span> Joining
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Joining List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-8 col-md-10 col-lg-7">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Employee Name</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Joining Date</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 col-md-2 col-lg-5">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.EmployeeJoining)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-7">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap"><span class="smallAdd">Employee Name : </span>@Html.DisplayFor(modelItem => item.EmployeeName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Joining Date : </span>@(item.JoiningDate.HasValue
                                        ? item.JoiningDate.Value.ToString("dd-MM-yyyy")
                                        : "N/A")
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-5">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editJoiningLink" data-id="@item.EmployeeID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="editJoiningModalContainer"></div>
