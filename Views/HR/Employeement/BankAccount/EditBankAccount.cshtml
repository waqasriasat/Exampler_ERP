@model List<Exampler_ERP.Models.HR_BankAccount>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="editBankAccountModal" tabindex="-1" role="dialog" aria-labelledby="editBankAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editBankAccountModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Bank Account
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="editBankAccountForm">
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label for="EmployeeName" class="form-label fw-bold">Employee Name</label>
                                <input type="text" class="form-control form-control-lg" id="EmployeeName" value="@Model.FirstOrDefault()?.Employee?.FirstName @Model.FirstOrDefault()?.Employee?.FatherName @Model.FirstOrDefault()?.Employee?.FamilyName" disabled />
                                <input type="hidden" name="EmployeeID" id="EmployeeID" value="@Model.FirstOrDefault()?.Employee?.EmployeeID" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="AccountHolderName" class="form-label fw-bold">Account Holder Name</label>
                                <input type="text" class="form-control form-control-lg" id="AccountHolderName" name="AccountHolderName" value="@Model.FirstOrDefault()?.AccountHolderName" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="AccountNumber" class="form-label fw-bold">Account Number</label>
                                <input type="text" class="form-control form-control-lg" id="AccountNumber" name="AccountNumber" value="@Model.FirstOrDefault()?.AccountNumber" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="BankName" class="form-label fw-bold">Bank Name</label>
                                <input type="text" class="form-control form-control-lg" id="BankName" name="BankName" value="@Model.FirstOrDefault()?.BankName" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="BranchName" class="form-label fw-bold">@Localizer["lbl_BranchName"]</label>
                                <input type="text" class="form-control form-control-lg" id="BranchName" name="BranchName" value="@Model.FirstOrDefault()?.BranchName" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="AccountType" class="form-label fw-bold">Account Type</label>
                                <input type="text" class="form-control form-control-lg" id="AccountType" name="AccountType" value="@Model.FirstOrDefault()?.AccountType" />
                            </div>
                        </div>
                        <div class="col-6 mb-2">
                            <div class="form-group">
                                <label for="BankContact" class="form-label fw-bold">Bank Contact</label>
                                <input type="text" class="form-control form-control-lg" id="BankContact" name="BankContact" value="@Model.FirstOrDefault()?.BankContact" />
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label for="BankAddress" class="form-label fw-bold">Bank Address</label>
                                <input type="text" class="form-control form-control-lg" id="BankAddress" name="BankAddress" value="@Model.FirstOrDefault()?.BankAddress" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="submit" class="btn btn-success" id="saveChanges">@Localizer["lbl_SaveChanges"]</button>
            </div>
        </div>
    </div>
</div>
