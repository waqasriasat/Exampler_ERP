@model Exampler_ERP.Models.Temp.DeductionSetupViewModel

<div class="modal fade" id="editDeductionSetupModal" tabindex="-1" role="dialog" aria-labelledby="editDeductionSetupModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDeductionSetupModalLabel">Edit DeductionSetup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editDeductionSetupForm" method="post" asp-action="SaveChanges">
                    <input type="hidden" asp-for="DeductionTypeID" />
                    <div class="form-group">
                        <label for="DeductionTypeID">DeductionType</label>
                        <select asp-for="DeductionTypeID" asp-items="@(new SelectList(ViewBag.DeductionTypes, "DeductionTypeID", "DeductionTypeName"))" class="form-control" disabled></select>
                    </div>
                    <div class="form-group">
                        <label for="ClassID">Class</label>
                        <select asp-for="ClassID" asp-items="@(new SelectList(ViewBag.ClassIDList, "Value", "Text"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label>Salary Type</label>
                        @for (var i = 0; i < Model.SalaryTypeDeductions.Count; i++)
                        {
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-7">
                                            <div class="form-check">
                                                <input type="hidden" name="SalaryTypeDeductions[@i].SalaryTypeID" value="@Model.SalaryTypeDeductions[i].SalaryTypeID" />
                                                <input type="hidden" name="SalaryTypeDeductions[@i].SalaryTypeName" value="@Model.SalaryTypeDeductions[i].SalaryTypeName" />
                                                <input class="form-check-input" type="checkbox" name="SalaryTypeDeductions[@i].IsSelected" value="true" @(Model.SalaryTypeDeductions[i].IsSelected ? "checked" : "") />
                                                <label class="form-check-label">@Model.SalaryTypeDeductions[i].SalaryTypeName</label>
                                            </div>
                                        </div>
                                        <div class="col-5">
                                            <div class="form-group">
                                                <select asp-for="@Model.SalaryTypeDeductions[i].DeductionValueID" asp-items="@(new SelectList(ViewBag.DeductionValueList, "Value", "Text"))" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
