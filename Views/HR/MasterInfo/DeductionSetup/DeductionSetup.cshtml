                       <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Deduction Type @Localizer["lbl_Name"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Class</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Total</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-2">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">@Localizer["lbl_Edit"]</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">@Localizer["lbl_Delete"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
