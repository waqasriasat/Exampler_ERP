@model IEnumerable<Exampler_ERP.Models.Settings_DepartmentType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_Print"]  @Localizer["lbl_Department"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_Department"] @Localizer["lbl_List"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_Department"] @Localizer["lbl_ID"]</th>
                <th>@Localizer["lbl_Branch"] @Localizer["lbl_Name"]</th>
                <th>@Localizer["lbl_Department"] @Localizer["lbl_Name"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Department in Model)
            {
                <tr>
                    <td>@Department.DepartmentTypeID</td>
                    <td>@(Department.BranchType?.BranchTypeName ?? "N/A")</td>
                    <td>@Department.DepartmentTypeName</td>
                    <td>@(Department.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
