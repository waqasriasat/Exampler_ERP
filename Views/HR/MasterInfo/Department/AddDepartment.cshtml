@model Exampler_ERP.Models.Settings_Department

<div class="modal fade" id="addDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addEmployeeRequestModalLabel"><i class="fas fa-key me-2"></i>Add New Department</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addDepartmentForm">
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="BranchID" class="form-label fw-bold">Select Branch</label>
                            <select asp-for="BranchID" asp-items="@(new SelectList(ViewBag.BranchList, "Value", "Text", Model.BranchID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="BranchID" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>Please select</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="DepartmentName" class="form-label fw-bold">Department Name</label>
                            <input type="text" class="form-control form-control-lg" id="DepartmentName" name="DepartmentName" value="@Model.DepartmentName" />
                        </div>
                        
                      </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveNewDepartment">Save</button>
            </div>
        </div>
    </div>
</div>
