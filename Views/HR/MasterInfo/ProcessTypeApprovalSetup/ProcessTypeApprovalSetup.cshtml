@model Exampler_ERP.Models.Temp.ProcessTypeApprovalSetupListViewModel

@{
    ViewData["Title"] = "Master Information - Process Type Approval Setup";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            $('.editProcessTypeApprovalSetupLink').click(function (e) {
                e.preventDefault();
                var processTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "ProcessTypeApprovalSetup")', { id: processTypeId }, function (data) {
                    $('#editProcessTypeApprovalSetupModalContainer').html(data);
                    $('#editProcessTypeApprovalSetupModal').modal('show');
                });
            });
           
            $('#editProcessTypeApprovalSetupModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editProcessTypeApprovalSetupForm').serialize();
                console.log("Serialized form data:", formData); // Log serialized data for debugging
                $.post('@Url.Action("Edit", "ProcessTypeApprovalSetup")', formData, function (response) {
                    if (response.success) {
                        $('#editProcessTypeApprovalSetupModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Close Modal Edit Contrainer
            $('#editProcessTypeApprovalSetupModalContainer').on('click', '#Close', function () {
                $('#editProcessTypeApprovalSetupModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });


            // Delete ProcessTypeApprovalSetup
            $('.deleteProcessTypeApprovalSetupLink').click(function (e) {
                e.preventDefault();
                var ProcessTypeApprovalSetupId = $(this).data('id');
                $.post('@Url.Action("Delete", "ProcessTypeApprovalSetup")', { id: ProcessTypeApprovalSetupId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printProcessTypeApprovalSetups() {
            var printWindow = window.open('@Url.Action("Print", "ProcessTypeApprovalSetup")', '_blank');
            printWindow.focus();
        }
        $('#searchProcessTypeButton').click(function () {
            var searchValue = $('#searchProcessTypeInput').val();
            window.location.href = '@Url.Action("Index", "ProcessTypeApprovalSetup")?searchProcessTypeName=' + searchValue;
        });
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Process Type Approval Setup
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">Searching Box</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Process Type name" id="searchProcessTypeInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchProcessTypeButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "ProcessTypeApprovalSetup")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printProcessTypeApprovalSetups()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Process Type Approval Setup List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                       <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-8">
                                    <p class="text-nowrap">Process Type Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Total Rank</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-2">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Delete</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.ProcessTypesWithRankCount)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-10 col-lg-10">
                                <div class="row">
                                        <div class="col-12 col-md-12 col-lg-8">
                                            <p class="text-nowrap"><span class="smallAdd">Process Type Name : </span>@Html.DisplayFor(modelItem => item.ProcessTypeName)</p>
                                        </div>
                                        <div class="col-12 col-md-12 col-lg-2">
                                            <p class="text-nowrap"><span class="smallAdd">Total Role : </span>@Html.DisplayFor(modelItem => item.RankCount)</p>
                                        </div>
                                </div>
                            </div>
                            <div class="col-2 col-md-2 col-lg-2">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editProcessTypeApprovalSetupLink" data-id="@item.ProcessTypeID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteProcessTypeApprovalSetupLink" data-id="@item.ProcessTypeID">
                                                <i class="fa-regular fa-trash-can" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="editProcessTypeApprovalSetupModalContainer"></div>
