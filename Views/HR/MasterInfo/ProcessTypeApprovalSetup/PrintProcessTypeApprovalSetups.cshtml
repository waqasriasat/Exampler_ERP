@model IEnumerable<Exampler_ERP.Models.CR_ProcessTypeApprovalSetup>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_Print"]  Process Type Approval Setup</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>Process Type Approval Setup List</h2>
    <table>
        <thead>
            <tr>
                <th>Process Type Approval ID</th>
                <th>Process Type Name</th>
                <th>Rank Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ProcessTypeApprovalSetup in Model)
            {
                <tr>
                    <td>@ProcessTypeApprovalSetup.ProcessTypeApprovalSetupID</td>
                    <td>@(ProcessTypeApprovalSetup.ProcessType?.ProcessTypeName ?? "N/A")</td>
                    <td>@ProcessTypeApprovalSetup.Rank</td>
                    <td>@ProcessTypeApprovalSetup.RoleTypeID</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
