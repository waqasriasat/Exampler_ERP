@model Exampler_ERP.Models.CR_User

<div class="row">
    <div class="col-2 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-6">
                <label asp-for="RoleTypeID" class="form-label fw-bold">Select Role</label>
                <select asp-for="RoleTypeID" asp-items="@(new SelectList(ViewBag.RoleList, "Value", "Text", Model.RoleTypeID))" class="form-control form-control-lg">
                </select>
                <span asp-validation-for="RoleTypeID" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="EmployeeID" class="form-label fw-bold">Employee</label>
                <select asp-for="EmployeeID" asp-items="@(new SelectList(ViewBag.EmployeeList, "Value", "Text"))" class="form-control form-control-lg" disabled>
                </select>
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
                <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            </div>
            <div class="col-12">
                <label for="UserName" class="form-label fw-bold">User Name</label>
                <input type="text" class="form-control form-control-lg" id="UserName" name="UserName" value="@Model.UserName" disabled />
                <input type="hidden" name="UserName" value="@Model.UserName" />
            </div>
            <div class="col-12">
                <label for="Password" class="form-label fw-bold">Password</label>
                <input type="text" class="form-control form-control-lg" id="Password" name="Password" value="@Model.Password" />
            </div>
            <input type="hidden" id="ActiveYNID" name="ActiveYNID" value="@Model.ActiveYNID" />
            <input type="hidden" id="DeleteYNID" name="DeleteYNID" value="@Model.DeleteYNID" />
            <input type="hidden" id="FinalApprovalID" name="FinalApprovalID" value="@Model.FinalApprovalID" />
            <input type="hidden" id="ProcessTypeApprovalID" name="ProcessTypeApprovalID" value="@Model.ProcessTypeApprovalID" />
        </div>
    </div>
</div>
<input type="hidden" id="UserID" name="UserID" value="@Model.UserID" />
