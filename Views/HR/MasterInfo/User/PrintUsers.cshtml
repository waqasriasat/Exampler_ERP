@model IEnumerable<Exampler_ERP.Models.CR_User>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintUser"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_UserList"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_UserID"]</th>
                <th>@Localizer["lbl_UserName"]</th>
                <th>@Localizer["lbl_RoleTypeName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.UserID</td>
                    <td>@User.UserName</td>
                    <td>@(User.RoleType?.RoleTypeName ?? "N/A")</td>
                    <td>@(User.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
