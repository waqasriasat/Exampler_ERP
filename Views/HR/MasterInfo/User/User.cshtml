@model IEnumerable<Exampler_ERP.Models.CR_User>

@{
    ViewData["Title"] = "Master Information - User";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit User modal popup
            $('.editUserLink').click(function (e) {
                e.preventDefault();
                var UserId = $(this).data('id');
                $.get('@Url.Action("Edit", "User")', { id: UserId }, function (data) {
                    $('#editUserModalContainer').html(data);
                    $('#editUserModal').modal('show');
                });
            });

            $('#editUserModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editUserForm').serialize();
                $.post('@Url.Action("Edit", "User")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        // Show validation errors
                    }
                });
            });

            // Add new User modal popup
            $('.addUserLink').click(function () {
                $.get('@Url.Action("Create", "User")', function (data) {
                    $('#addUserModalContainer').html(data);
                    $('#addUserModal').modal('show');
                });
            });

            // Save new User form
            $('#addUserModalContainer').on('click', '#saveNewUser', function () {
                var formData = $('#addUserForm').serialize();
                $.post('@Url.Action("Create", "User")', formData, function (response) {
                    if (response.success) {
                        $('#addUserModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addUserModalContainer').on('click', '#Close', function () {
                $('#addUserModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editUserModalContainer').on('click', '#Close', function () {
                $('#editUserModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete User
            $('.deleteUserLink').click(function (e) {
                e.preventDefault();
                var UserId = $(this).data('id');
                $.post('@Url.Action("Delete", "User")', { id: UserId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printUsers() {
            var printWindow = window.open('@Url.Action("Print", "User")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> User
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">User List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-9">
                            <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">User ID</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Role Name</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">User Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-9">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">User ID : </span>@Html.DisplayFor(modelItem => item.UserID)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">Role Name : </span>@(item.RoleType?.RoleTypeName ?? "N/A")  </p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">User Name : </span>@Html.DisplayFor(modelItem => item.UserName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 0)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-3">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editUserLink" data-id="@item.UserID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteUserLink" data-id="@item.UserID">
                                                <i class="fa fa-trash-o" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="mt-4">
                        <button type="button" class="btn btn-primary addUserLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "User")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printUsers()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editUserModalContainer"></div>
<div id="addUserModalContainer"></div>
