@model IEnumerable<Exampler_ERP.Models.Settings_ProcessType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintProcessType"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_ProcessTypeList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_ProcessTypeID"]</th>
                <th>@Localizer["lbl_ProcessTypeName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ProcessType in Model)
            {
                <tr>
                    <td>@ProcessType.ProcessTypeID</td>
                    <td>@ProcessType.ProcessTypeName</td>
                    <td>@(ProcessType.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
