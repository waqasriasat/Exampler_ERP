@model Exampler_ERP.Models.Temp.ProcessTypeForwardViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addNewProcessTypeForwardModal" tabindex="-1" role="dialog" aria-labelledby="addNewProcessTypeForwardModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addNewProcessTypeForwardModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New Process Type Forward
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="ProcessTypeID" class="form-label fw-bold">Process Type</label>
                        <select asp-for="ProcessTypeID" asp-items="@(new SelectList(ViewBag.ProcessTypes, "ProcessTypeID", "ProcessTypeName"))" class="form-control form-control-lg"></select>
                        <span asp-validation-for="ProcessTypeID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Roles</label>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedRoleIds" value="@role.RoleID" />
                                <label class="form-check-label">@role.RoleName</label>
                            </div>
                        }
                        <span asp-validation-for="SelectedRoleIds" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                        <button type="submit" class="btn btn-success" id="saveNewProcessTypeForward">@Localizer["lbl_Save"] </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
