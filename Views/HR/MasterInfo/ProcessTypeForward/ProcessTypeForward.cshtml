@model Exampler_ERP.Models.Temp.ProcessTypeForwardListViewModel


<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Process Type Forward
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">ProcessTypeForward List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-9">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Process Type Name</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Total Role</p>
                                </div>
                                <div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.ProcessTypesWithRoleCount)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-9">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap"><span class="smallAdd">Process Type Name : </span>@Html.DisplayFor(modelItem => item.ProcessTypeName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap"><span class="smallAdd">Total Role : </span>@Html.DisplayFor(modelItem => item.RoleCount)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-3">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editProcessTypeForwardLink" data-id="@item.ProcessTypeID">
                                                <i class="fa fa-pencil" style="font-size: x-large; color: steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteProcessTypeForwardLink" data-id="@item.ProcessTypeID">
                                                <i class="fa fa-trash-o" style="font-size: x-large; color: maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="mt-4">
                        <button type="button" class="btn btn-primary addNewProcessTypeForwardLink" style="display:none">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "ProcessTypeForward")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printProcessTypeForwards()">Print</button>
                    </div>
                </div>
                </<div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="editProcessTypeForwardModalContainer"></div>
<div id="addNewProcessTypeForwardModalContainer"></div>

@section PageScripts {
    <script>
        $(document).ready(function () {
            // Edit ProcessTypeForward modal popup
            $('.editProcessTypeForwardLink').click(function (e) {
                e.preventDefault();
                var processTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "ProcessTypeForward")', { id: processTypeId }, function (data) {
                    $('#editProcessTypeForwardModalContainer').html(data);
                    $('#editProcessTypeForwardModal').modal('show');
                });
            });
            $('#editProcessTypeForwardModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editProcessTypeForwardForm').serialize();
                $.post('@Url.Action("Edit", "ProcessTypeForward")', formData, function (response) {
                    if (response.success) {
                        $('#editProcessTypeForwardModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // AddNew ProcessTypeForward modal popup
            $('.addNewProcessTypeForwardLink').click(function () {
                $.get('@Url.Action("Create", "ProcessTypeForward")', function (data) {
                    $('#addNewProcessTypeForwardModalContainer').html(data);
                    $('#addNewProcessTypeForwardModal').modal('show');
                });
            });

            // Save new ProcessTypeForward form
            $('#addNewProcessTypeForwardModalContainer').on('click', '#saveNewProcessTypeForward', function () {
                var formData = $('#addNewProcessTypeForwardForm').serialize();
                $.post('@Url.Action("Create", "ProcessTypeForward")', formData, function (response) {
                    if (response.success) {
                        $('#addNewProcessTypeForwardModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addNewProcessTypeForwardModalContainer').on('click', '#Close', function () {
                $('#addNewProcessTypeForwardModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editProcessTypeForwardModalContainer').on('click', '#Close', function () {
                $('#editProcessTypeForwardModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });


            // Delete ProcessTypeForward
            $('.deleteProcessTypeForwardLink').click(function (e) {
                e.preventDefault();
                var processTypeId = $(this).data('id');
                $.post('@Url.Action("Delete", "ProcessTypeForward")', { id: processTypeId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });

        function printProcessTypeForwards() {
            var printWindow = window.open('@Url.Action("Print", "ProcessTypeForward")', '_blank');
            printWindow.focus();
        }
    </script>
}
