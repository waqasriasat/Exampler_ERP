@model Exampler_ERP.Models.Settings_AdditionalAllowanceType
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addAdditionalAllowanceTypeModal" tabindex="-1" role="dialog" aria-labelledby="addAdditionalAllowanceTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addAdditionalAllowanceTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
					@Localizer["lbl_AddNewAdditionalAllowanceType"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addAdditionalAllowanceTypeForm">
                    <div class="row">
                        <div class="col-12">
							<label for="AdditionalAllowanceTypeName" class="form-label fw-bold">@Localizer["lbl_AdditionalAllowanceTypeName"]</label>
                            <input type="text" class="form-control form-control-lg" id="AdditionalAllowanceTypeName" name="AdditionalAllowanceTypeName" value="@Model.AdditionalAllowanceTypeName" />
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">@Localizer["lbl_Active"]</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>@Localizer["lbl_Pleaseselect"]</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewAdditionalAllowanceType">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>
