@model Exampler_ERP.Models.Settings_VacationType

<div class="modal fade" id="addVacationTypeModal" tabindex="-1" role="dialog" aria-labelledby="addVacationTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addVacationTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New Vacation Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addVacationTypeForm">
                    <div class="row">
                        <div class="col-12">
                            <label for="VacationTypeName" class="form-label fw-bold">Vacation Type Name</label>
                            <input type="text" class="form-control form-control-lg" id="VacationTypeName" name="VacationTypeName" value="@Model.VacationTypeName" />
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>Please select</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveNewVacationType">Save</button>
            </div>
        </div>
    </div>
</div>
