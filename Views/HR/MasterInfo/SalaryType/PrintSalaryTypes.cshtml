@model IEnumerable<Exampler_ERP.Models.Settings_SalaryType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintSalaryType"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_SalaryTypeList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_SalaryTypeID"]</th>
                <th>@Localizer["lbl_SalaryTypeName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var SalaryType in Model)
            {
                <tr>
                    <td>@SalaryType.SalaryTypeID</td>
                    <td>@SalaryType.SalaryTypeName</td>
                    <td>@(SalaryType.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
