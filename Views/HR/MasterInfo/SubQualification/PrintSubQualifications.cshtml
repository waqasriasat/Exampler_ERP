@model IEnumerable<Exampler_ERP.Models.Settings_SubQualificationType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintSubQualification"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_SubQualificationList"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_SubQualificationID"]</th>
                <th>@Localizer["lbl_QualificationName"]</th>
                <th>@Localizer["lbl_SubQualificationName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var SubQualification in Model)
            {
                <tr>
                    <td>@SubQualification.SubQualificationTypeID</td>
                    <td>@(SubQualification.QualificationType?.QualificationTypeName ?? "N/A")</td>
                    <td>@SubQualification.SubQualificationTypeName</td>
                    <td>@(SubQualification.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
