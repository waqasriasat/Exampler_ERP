@model IEnumerable<Exampler_ERP.Models.Settings_OverTimeRate>

@{
    ViewData["Title"] = "Master Information - Over Time Rate";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit OverTimeRate modal popup
            $('.editOverTimeRateLink').click(function (e) {
                e.preventDefault();
                var OverTimeRateId = $(this).data('id');
                $.get('@Url.Action("Edit", "OverTimeRate")', { id: OverTimeRateId }, function (data) {
                    $('#editOverTimeRateModalContainer').html(data);
                    $('#editOverTimeRateModal').modal('show');
                });
            });

            $('#editOverTimeRateModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editOverTimeRateForm').serialize();
                $.post('@Url.Action("Edit", "OverTimeRate")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        // Show validation errors
                    }
                });
            });

            // Add new OverTimeRate modal popup
            $('.addOverTimeRateLink').click(function () {
                $.get('@Url.Action("Create", "OverTimeRate")', function (data) {
                    $('#addOverTimeRateModalContainer').html(data);
                    $('#addOverTimeRateModal').modal('show');
                });
            });

            // Save new OverTimeRate form
            $('#addOverTimeRateModalContainer').on('click', '#saveNewOverTimeRate', function () {
                var formData = $('#addOverTimeRateForm').serialize();
                $.post('@Url.Action("Create", "OverTimeRate")', formData, function (response) {
                    if (response.success) {
                        $('#addOverTimeRateModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addOverTimeRateModalContainer').on('click', '#Close', function () {
                $('#addOverTimeRateModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editOverTimeRateModalContainer').on('click', '#Close', function () {
                $('#editOverTimeRateModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete OverTimeRate
            $('.deleteOverTimeRateLink').click(function (e) {
                e.preventDefault();
                var OverTimeRateId = $(this).data('id');
                $.post('@Url.Action("Delete", "OverTimeRate")', { id: OverTimeRateId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printOverTimeRates() {
            var printWindow = window.open('@Url.Action("Print", "OverTimeRate")', '_blank');
            printWindow.focus();
        }
        $('#searchOverTimeRateButton').click(function () {
            var searchValue = $('#searchOverTimeRateInput').val();
            window.location.href = '@Url.Action("Index", "OverTimeRate")?searchOverTimeRateName=' + searchValue;
        });
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Over Time Rate
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">Searhing Box</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Over Time Rate Value" id="searchOverTimeRateInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchOverTimeRateButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                       <button type="button" class="btn btn-primary addOverTimeRateLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "OverTimeRate")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printOverTimeRates()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Over Time Rate List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                       <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-8">
                                    <p class="text-nowrap">Over Time Rate Value</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-2">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Delete</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-10 col-lg-10">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-8">
                                        <p class="text-nowrap"><span class="smallAdd">Over Time Rate Value : </span>@Html.DisplayFor(modelItem => item.OverTimeRateValue)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 2)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="col-2 col-md-2 col-lg-2">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editOverTimeRateLink" data-id="@item.OverTimeRateTypeID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteOverTimeRateLink" data-id="@item.OverTimeRateTypeID">
                                                <i class="fa fa-trash-o" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editOverTimeRateModalContainer"></div>
<div id="addOverTimeRateModalContainer"></div>
