@model IEnumerable<Exampler_ERP.Models.Settings_AddionalAllowanceType>

@{
    ViewData["Title"] = "Master Information - AddionalAllowanceType";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit AddionalAllowanceType modal popup
            $('.editAddionalAllowanceTypeLink').click(function (e) {
                e.preventDefault();
                var AddionalAllowanceTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "AddionalAllowanceType")', { id: AddionalAllowanceTypeId }, function (data) {
                    $('#editAddionalAllowanceTypeModalContainer').html(data);
                    $('#editAddionalAllowanceTypeModal').modal('show');
                });
            });

            $('#editAddionalAllowanceTypeModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editAddionalAllowanceTypeForm').serialize();
                $.post('@Url.Action("Edit", "AddionalAllowanceType")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        // Show validation errors
                    }
                });
            });

            // Add new AddionalAllowanceType modal popup
            $('.addAddionalAllowanceTypeLink').click(function () {
                $.get('@Url.Action("Create", "AddionalAllowanceType")', function (data) {
                    $('#addAddionalAllowanceTypeModalContainer').html(data);
                    $('#addAddionalAllowanceTypeModal').modal('show');
                });
            });

            // Save new AddionalAllowanceType form
            $('#addAddionalAllowanceTypeModalContainer').on('click', '#saveNewAddionalAllowanceType', function () {
                var formData = $('#addAddionalAllowanceTypeForm').serialize();
                $.post('@Url.Action("Create", "AddionalAllowanceType")', formData, function (response) {
                    if (response.success) {
                        $('#addAddionalAllowanceTypeModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addAddionalAllowanceTypeModalContainer').on('click', '#Close', function () {
                $('#addAddionalAllowanceTypeModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editAddionalAllowanceTypeModalContainer').on('click', '#Close', function () {
                $('#editAddionalAllowanceTypeModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete AddionalAllowanceType
            $('.deleteAddionalAllowanceTypeLink').click(function (e) {
                e.preventDefault();
                var AddionalAllowanceTypeId = $(this).data('id');
                $.post('@Url.Action("Delete", "AddionalAllowanceType")', { id: AddionalAllowanceTypeId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printAddionalAllowanceTypes() {
            var printWindow = window.open('@Url.Action("Print", "AddionalAllowanceType")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> AddionalAllowanceType
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">AddionalAllowanceType List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-9">
                            <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">AddionalAllowanceType ID</p>
                                </div>
                                <div class="col-8">
                                    <p class="text-nowrap">AddionalAllowanceType Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-9">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">AddionalAllowanceType ID : </span>@Html.DisplayFor(modelItem => item.AddionalAllowanceTypeID)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-8">
                                        <p class="text-nowrap"><span class="smallAdd">AddionalAllowanceType Name : </span>@Html.DisplayFor(modelItem => item.AddionalAllowanceTypeName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 0)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-3">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editAddionalAllowanceTypeLink" data-id="@item.AddionalAllowanceTypeID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteAddionalAllowanceTypeLink" data-id="@item.AddionalAllowanceTypeID">
                                                <i class="fa fa-trash-o" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="mt-4">
                        <button type="button" class="btn btn-primary addAddionalAllowanceTypeLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "AddionalAllowanceType")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printAddionalAllowanceTypes()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editAddionalAllowanceTypeModalContainer"></div>
<div id="addAddionalAllowanceTypeModalContainer"></div>
