@model Exampler_ERP.Models.Settings_AddionalAllowanceType

<div class="modal fade" id="addAddionalAllowanceTypeModal" tabindex="-1" role="dialog" aria-labelledby="addAddionalAllowanceTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addAddionalAllowanceTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New Addional Allowance Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addAddionalAllowanceTypeForm">
                    <div class="row">
                        <div class="col-12">
                            <label for="AddionalAllowanceTypeName" class="form-label fw-bold">Addional Allowance Type Name</label>
                            <input type="text" class="form-control form-control-lg" id="AddionalAllowanceTypeName" name="AddionalAllowanceTypeName" value="@Model.AddionalAllowanceTypeName" />
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">Active</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>Please select</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="button" class="btn btn-success" id="saveNewAddionalAllowanceType">Save</button>
            </div>
        </div>
    </div>
</div>
