@model IEnumerable<Exampler_ERP.Models.HR_EmployeeRequestTypeApprovalSetup>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_Print"]  Employee Request Type Approval Setup</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>Employee Request Type Approval Setup List</h2>
    <table>
        <thead>
            <tr>
                <th>Employee Request Type ApprovalID</th>
                <th>Employee Request Type Name</th>
                <th>Rank Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var EmployeeRequestTypeApprovalSetup in Model)
            {
                <tr>
                    <td>@EmployeeRequestTypeApprovalSetup.EmployeeRequestTypeApprovalSetupID</td>
                    <td>@(EmployeeRequestTypeApprovalSetup.EmployeeRequestType?.EmployeeRequestTypeName ?? "N/A")</td>
                    <td>@EmployeeRequestTypeApprovalSetup.Rank</td>
                    <td>@EmployeeRequestTypeApprovalSetup.RoleTypeID</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
