@model Exampler_ERP.Models.Settings_BranchType
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addBranchModal" tabindex="-1" role="dialog" aria-labelledby="addBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addBranchModalLabel">
                    <i class="fas fa-key me-2"></i>
					@Localizer["lbl_AddNew"] @Localizer["lbl_Branch"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addBranchForm">
                    <div class="row">
                        <div class="col-12">
                            <label for="BranchTypeName" class="form-label fw-bold">@Localizer["lbl_BranchName"]</label>
                            <input type="text" class="form-control form-control-lg" id="BranchTypeName" name="BranchTypeName" value="@Model.BranchTypeName" />
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">@Localizer["lbl_Active"]</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>@Localizer["lbl_Pleaseselect"]</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label for="POBox" class="form-label fw-bold">@Localizer["lbl_POBox"] </label>
                            <input type="text" class="form-control form-control-lg" id="POBox" name="POBox" value="@Model.POBox" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <label for="Country" class="form-label fw-bold">@Localizer["lbl_Country"] </label>
                            <input type="text" class="form-control form-control-lg" id="Country" name="Country" value="@Model.Country" />
                        </div>
                        <div class="col-6">
                            <label for="City" class="form-label fw-bold">@Localizer["lbl_City"] </label>
                            <input type="text" class="form-control form-control-lg" id="City" name="City" value="@Model.City" />
                        </div>
                        <div class="col-6">
                            <label for="Street" class="form-label fw-bold">@Localizer["lbl_Street"] </label>
                            <input type="text" class="form-control form-control-lg" id="Street" name="Street" value="@Model.Street" />
                        </div>
                        <div class="col-6">
                            <label for="Phone" class="form-label fw-bold">@Localizer["lbl_Phone"] </label>
                            <input type="text" class="form-control form-control-lg" id="Phone" name="Phone" value="@Model.Phone" />
                        </div>
                        <div class="col-6">
                            <label for="Fax" class="form-label fw-bold">@Localizer["lbl_Fax"] </label>
                            <input type="text" class="form-control form-control-lg" id="Fax" name="Fax" value="@Model.Fax" />
                        </div>
                        <div class="col-6">
                            <label for="Mobile" class="form-label fw-bold">@Localizer["lbl_Mobile"] </label>
                            <input type="text" class="form-control form-control-lg" id="Mobile" name="Mobile" value="@Model.Mobile" />
                        </div>
                        <div class="col-12">
                            <label for="Address" class="form-label fw-bold">@Localizer["lbl_Address"] </label>
                            <input type="text" class="form-control form-control-lg" id="Address" name="Address" style="height: 100px;" value="@Model.Address" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewBranch">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>
