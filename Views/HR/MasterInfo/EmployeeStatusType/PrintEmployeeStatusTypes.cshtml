@model IEnumerable<Exampler_ERP.Models.Settings_EmployeeStatusType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintEmployeeStatusType"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_EmployeeStatusTypeList"] </h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_EmployeeStatusTypeID"]</th>
				<th>@Localizer["lbl_EmployeeStatusTypeName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var EmployeeStatusType in Model)
            {
                <tr>
                    <td>@EmployeeStatusType.EmployeeStatusTypeID</td>
                    <td>@EmployeeStatusType.EmployeeStatusTypeName</td>
                    <td>@(EmployeeStatusType.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
