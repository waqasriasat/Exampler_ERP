@model IEnumerable<Exampler_ERP.Models.Settings_SectionType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintSection"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_SectionList"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_SectionID"]</th>
                <th>@Localizer["lbl_DepartmentName"]</th>
                <th>@Localizer["lbl_SectionName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Section in Model)
            {
                <tr>
                    <td>@Section.SectionTypeID</td>
                    <td>@(Section.DepartmentType?.DepartmentTypeName ?? "N/A")</td>
                    <td>@Section.SectionTypeName</td>
                    <td>@(Section.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
