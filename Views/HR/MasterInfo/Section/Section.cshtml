@model IEnumerable<Exampler_ERP.Models.Settings_Section>

@{
    ViewData["Title"] = "Master Information - Section";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit Section modal popup
            $('.editSectionLink').click(function (e) {
                e.preventDefault();
                var SectionId = $(this).data('id');
                $.get('@Url.Action("Edit", "Section")', { id: SectionId }, function (data) {
                    $('#editSectionModalContainer').html(data);
                    $('#editSectionModal').modal('show');
                });
            });

            $('#editSectionModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editSectionForm').serialize();
                $.post('@Url.Action("Edit", "Section")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        // Show validation errors
                    }
                });
            });

            // Add new Section modal popup
            $('.addSectionLink').click(function () {
                $.get('@Url.Action("Create", "Section")', function (data) {
                    $('#addSectionModalContainer').html(data);
                    $('#addSectionModal').modal('show');
                });
            });

            // Save new Section form
            $('#addSectionModalContainer').on('click', '#saveNewSection', function () {
                var formData = $('#addSectionForm').serialize();
                $.post('@Url.Action("Create", "Section")', formData, function (response) {
                    if (response.success) {
                        $('#addSectionModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addSectionModalContainer').on('click', '#Close', function () {
                $('#addSectionModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editSectionModalContainer').on('click', '#Close', function () {
                $('#editSectionModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete Section
            $('.deleteSectionLink').click(function (e) {
                e.preventDefault();
                var SectionId = $(this).data('id');
                $.post('@Url.Action("Delete", "Section")', { id: SectionId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printSections() {
            var printWindow = window.open('@Url.Action("Print", "Section")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Section
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Section List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-9">
                            <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">Section ID</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Department Name</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Section Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-8 col-md-10 col-lg-9">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">Section ID : </span>@Html.DisplayFor(modelItem => item.SectionID)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">Department Name : </span>@(item.Department?.DepartmentName ?? "N/A")  </p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">Section Name : </span>@Html.DisplayFor(modelItem => item.SectionName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 0)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 col-md-2 col-lg-3">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editSectionLink" data-id="@item.SectionID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteSectionLink" data-id="@item.SectionID">
                                                <i class="fa fa-trash-o" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="mt-4">
                        <button type="button" class="btn btn-primary addSectionLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "Section")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printSections()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editSectionModalContainer"></div>
<div id="addSectionModalContainer"></div>
