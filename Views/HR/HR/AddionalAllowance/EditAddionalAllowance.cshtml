@model Exampler_ERP.Models.HR_AddionalAllowance

<div class="modal fade" id="editAddionalAllowanceModal" tabindex="-1" role="dialog" aria-labelledby="editAddionalAllowanceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editAddionalAllowanceModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit AddionalAllowance
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="editAddionalAllowanceForm">
                    @Html.Partial("~/Views/HR/HR/AddionalAllowance/_EditAddionalAllowance.cshtml", Model)
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="submit" class="btn btn-success" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
