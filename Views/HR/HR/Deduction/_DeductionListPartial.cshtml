@model IEnumerable<Exampler_ERP.Models.HR_Deduction>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
	var lblEmployeeName = Localizer["lbl_EmployeeName"];
	var lblDeductionType = Localizer["lbl_DeductionType"];
	var lblMonth = Localizer["lbl_Month"];
	var lblYear = Localizer["lbl_Year"];
	var lblDeducationDay = Localizer["lbl_DeducationDay"];
}
@foreach (var item in Model)
{
	<div class="col-12 col-md-12 col-lg-12 GVDetail">
		<div class="row">
			<div class="col-10 col-md-11 col-lg-10">
				<div class="row">
					<div class="col-12 col-md-12 col-lg-3">
						<p class="text-nowrap"><span class="smallAdd">@lblEmployeeName : </span>@item.Employee?.FirstName @item.Employee?.FatherName @item.Employee?.FamilyName</p>
					</div>
					<div class="col-12 col-md-12 col-lg-3">
						<p class="text-nowrap"><span class="smallAdd">@lblDeductionType : </span>@(item.DeductionType?.DeductionTypeName ?? "N/A")  </p>
					</div>
					<div class="col-12 col-md-12 col-lg-2">
						<p class="text-nowrap"><span class="smallAdd">@lblMonth : </span>@Html.DisplayFor(modelItem => item.Month)</p>
					</div>
					<div class="col-12 col-md-12 col-lg-2">
						<p class="text-nowrap"><span class="smallAdd">@lblYear : </span>@Html.DisplayFor(modelItem => item.Year)</p>
					</div>
					<div class="col-12 col-md-12 col-lg-2">
						<p class="text-nowrap"><span class="smallAdd">@lblDeducationDay : </span>@Html.DisplayFor(modelItem => item.Days)</p>
					</div>
				</div>
			</div>
			<div class="col-2 col-md-1 col-lg-2">
				<div class="row">
					<div class="col-12 col-md-12 col-lg-6">
						<div class="btn-group" role="group" aria-label="Actions">
							<a href="javascript:void(0)" class="editDeductionLink" data-id="@item.DeductionID">
								<i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
							</a>
						</div>
					</div>
					<div class="col-12 col-md-12 col-lg-6">
						<div class="btn-group" role="group" aria-label="Actions">
							<a href="javascript:void(0)" class="deleteDeductionLink" data-id="@item.DeductionID">
								<i class="fa-regular fa-trash-can" style="font-size: large; color:maroon; line-height: 2;"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
