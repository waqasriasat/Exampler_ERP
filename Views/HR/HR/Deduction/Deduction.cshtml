                                <div class="col-6">
                                    <p class="text-nowrap">@Localizer["lbl_Delete"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="DeductionListContainer">
                    @Html.Partial("~/Views/HR/HR/Deduction/_DeductionListPartial.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
