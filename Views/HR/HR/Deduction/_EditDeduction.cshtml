@model Exampler_ERP.Models.HR_Deduction
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h5 class="modal-title" style="padding-top:10px">Deduction Details</h5>
<hr />
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <label asp-for="EmployeeID" class="form-label fw-bold">@Localizer["lbl_EmployeeName"]</label>
                <select asp-for="EmployeeID" asp-items="@(new SelectList(ViewBag.EmployeesList, "Value", "Text"))" class="form-control form-control-lg" disabled>
                </select>
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label asp-for="DeductionTypeID" class="form-label fw-bold">Deduction @Localizer["lbl_Type"]</label>
                <select asp-for="DeductionTypeID" asp-items="@(new SelectList(ViewBag.DeductionTypesList, "Value", "Text"))" class="form-control form-control-lg" id="DeductionTypeSelect">
                </select>
                <span asp-validation-for="DeductionTypeID" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label asp-for="FromDate" class="form-label fw-bold">From @Localizer["lbl_Date"]</label>
                <input asp-for="FromDate" class="form-control date-placeholder" type="date" id="FromDateInput" placeholder="mm/dd/yyyy" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="ToDate" class="form-label fw-bold">To @Localizer["lbl_Date"]</label>
                <input asp-for="ToDate" class="form-control date-placeholder" type="date" id="ToDateInput" placeholder="mm/dd/yyyy" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label asp-for="Month" class="form-label fw-bold">Month</label>
                <input asp-for="Month" class="form-control form-control-lg readonly-background" type="number" readonly id="MonthInput" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="Year" class="form-label fw-bold">Year</label>
                <input asp-for="Year" class="form-control form-control-lg readonly-background" type="number" readonly id="YearInput" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label asp-for="Days" class="form-label fw-bold">Days</label>
                <input asp-for="Days" class="form-control form-control-lg readonly-background" type="number" readonly id="DaysInput" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
<input type="hidden" asp-for="EmployeeID" />
<input type="hidden" asp-for="DeleteYNID" />
<input type="hidden" asp-for="FinalApprovalID" />
<input type="hidden" asp-for="ProcessTypeApprovalID" />
<input type="hidden" asp-for="DeductionID" />
