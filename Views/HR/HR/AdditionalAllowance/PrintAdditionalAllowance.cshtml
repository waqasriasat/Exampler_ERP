@model IEnumerable<Exampler_ERP.Models.HR_AdditionalAllowance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
	Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintAdditionalAllowance"]</title>
	<style>
		table {
			width: 100%;
			border-collapse: collapse;
			background-color: white;
		}

		table, th, td {
			border: 1px solid black;
		}

		th, td {
			padding: 8px;
			text-align: left;
		}

		th {
			background-color: white;
		}
	</style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_AdditionalAllowanceList"]</h2>
	<table>
		<thead>
			<tr>
				<th>@Localizer["lbl_AdditionalAllowanceID"]</th>
				<th>@Localizer["lbl_EmployeeName"]</th>
				<th>@Localizer["lbl_Month"]</th>
				<th>@Localizer["lbl_Year"]</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var AdditionalAllowance in Model)
			{
				<tr>
					<td>@AdditionalAllowance.AdditionalAllowanceID</td>
					<td>@($"{AdditionalAllowance.Employee?.FirstName} {AdditionalAllowance.Employee?.FatherName} {AdditionalAllowance.Employee?.FamilyName}")</td>
					<td>@AdditionalAllowance.MonthType?.MonthTypeName</td>
					<td>@AdditionalAllowance.Year</td>
				</tr>
			}
		</tbody>
	</table>
	<script>
		window.print();
	</script>
</body>
</html>
