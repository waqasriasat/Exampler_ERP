@model IEnumerable<Exampler_ERP.Models.HR_AdditionalAllowance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@foreach (var item in Model)
{
	<div class="col-12 col-md-12 col-lg-12 GVDetail">
		<div class="row">
			<div class="col-10 col-md-11 col-lg-10">
				<div class="row">
					<div class="col-12 col-md-12 col-lg-6">
						<p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_EmployeeName"] : </span>@item.Employee?.FirstName @item.Employee?.FatherName @item.Employee?.FamilyName</p>
					</div>
					<div class="col-12 col-md-12 col-lg-3">
						<p class="text-nowrap"><span class="smallAdd">Type Count : </span>@item.MonthType?.MonthTypeName</p>
					</div>
					<div class="col-12 col-md-12 col-lg-3">
						<p class="text-nowrap"><span class="smallAdd">Type Count : </span>@Html.DisplayFor(modelItem => item.Year)</p>
					</div>
				</div>
			</div>
			<div class="col-2 col-md-1 col-lg-2">
				<div class="row">
					<div class="col-12 col-md-12 col-lg-6">
						<div class="btn-group" role="group" aria-label="Actions">
							<a href="javascript:void(0)" class="editAdditionalAllowanceLink" data-id="@item.AdditionalAllowanceID">
								<i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
							</a>
						</div>
					</div>
					<div class="col-12 col-md-12 col-lg-6">
						<div class="btn-group" role="group" aria-label="Actions">
							<a href="javascript:void(0)" class="PrintAdditionalAllowanceLink" data-id="@item.AdditionalAllowanceID">
								<i class="fa fa-print" style="font-size: large; color:steelblue; line-height: 2;"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
