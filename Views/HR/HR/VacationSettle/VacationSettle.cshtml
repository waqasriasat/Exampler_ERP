                        <div class="col-2 col-md-1 col-lg-3">
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-4">
                                    <p class="text-nowrap">@Localizer["lbl_Edit"]</p>
                                </div>
                                <div class="col-12 col-md-12 col-lg-4">
                                    <p class="text-nowrap">@Localizer["lbl_Print"] </p>
