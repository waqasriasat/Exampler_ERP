    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Vacation Settle @Localizer["lbl_List"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-11 col-lg-9">
                            <div class="row">
                                <div class="col-4">
                                    <p class="text-nowrap">@Localizer["lbl_EmployeeName"]</p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">@Localizer["lbl_VacationType"]</p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">Settle Days</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Settle Amount</p>
                                </div>
