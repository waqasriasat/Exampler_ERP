                                    <p class="text-nowrap">@Localizer["lbl_Delete"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="VacationSettleListContainer">
                    @Html.Partial("~/Views/HR/HR/VacationSettle/_VacationSettleListPartial.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</div>

