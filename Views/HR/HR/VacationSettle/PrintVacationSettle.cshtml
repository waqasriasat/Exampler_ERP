@model IEnumerable<Exampler_ERP.Models.HR_VacationSettle>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintVacationSettle"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_VacationSettleList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_VacationSettleID"]</th>
                <th>@Localizer["lbl_VacationType"]</th>
                <th>@Localizer["lbl_ApplyDate"]</th>
                <th>@Localizer["lbl_StartDate"]</th>
                <th>@Localizer["lbl_EndDate"]</th>
                <th>@Localizer["lbl_TotalDays"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var VacationSettle in Model)
            {
                <tr>
                    <td>@VacationSettle.VacationSettleID</td>
                    @* <td>@(VacationSettle.Settings_VacationSettleType?.VacationSettleTypeName ?? "N/A")</td>
                    <td>@VacationSettle.Date</td>
                    <td>@VacationSettle.StartDate</td>
                    <td>@VacationSettle.EndDate</td>
                    <td>@(VacationSettle.TotalDays)</td> *@
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
