                                    <p class="text-nowrap">@Localizer["lbl_Delete"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="EndOfServiceListContainer">
                    @Html.Partial("~/Views/HR/HR/EndOfService/_EndOfServiceListPartial.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</div>

