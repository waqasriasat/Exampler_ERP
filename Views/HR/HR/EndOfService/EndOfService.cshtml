    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header"> End Of Service @Localizer["lbl_List"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-11 col-lg-9">
                            <div class="row">
                                <div class="col-4">
                                    <p class="text-nowrap">@Localizer["lbl_Employee"] @Localizer["lbl_Name"]</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Date of Completion of Work</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Total End Of Service Dues</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 col-md-1 col-lg-3">
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-4">
                                    <p class="text-nowrap">@Localizer["lbl_Edit"]</p>
                                </div>
                                <div class="col-12 col-md-12 col-lg-4">
                                    <p class="text-nowrap">Print</p>
