@model IEnumerable<Exampler_ERP.Models.HR_Holiday>

@foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-11 col-lg-10">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Holiday Type: </span>@(item.HolidayType?.HolidayTypeName ?? "N/A")
                                        </p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Date: </span>@item.HolidayDate.ToString("dd/MMM/yyyy")
                                        </p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Approved: </span>
                                            @if (item.FinalApprovalID == 0)
                                            {
                                                <span>Pending</span>
                                            }
                                            else if (item.FinalApprovalID == 1)
                                            {
                                                <span>Approved</span>
                                            }
                                            else if (item.FinalApprovalID == 2)
                                            {
                                                <span>Disapproved</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 col-md-1 col-lg-2">
                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editHolidayLink" data-id="@item.HolidayID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteHolidayLink" data-id="@item.HolidayID">
                                                <i class="fa-regular fa-trash-can" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
