@model Exampler_ERP.Models.HR_Holiday
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="editHolidayModal" tabindex="-1" role="dialog" aria-labelledby="editHolidayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editHolidayModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Holiday
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="editHolidayForm">
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="HolidayTypeID" class="form-label fw-bold">Holiday Name</label>
                                <select asp-for="HolidayTypeID" asp-items="@(new SelectList(ViewBag.HolidayTypesList, "Value", "Text"))" class="form-control form-control-lg">
                                </select>
                                <span asp-validation-for="HolidayTypeID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="HolidayDate" class="form-label fw-bold">@Localizer["lbl_StartDate"]</label>
                                <input asp-for="HolidayDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="HolidayDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="HolidayID" />
                    <input type="hidden" asp-for="DeleteYNID"  />
                    <input type="hidden" asp-for="ActiveYNID" />
                    <input type="hidden" asp-for="FinalApprovalID"  />
                    <input type="hidden" asp-for="ProcessTypeApprovalID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="submit" class="btn btn-success" id="saveChanges">@Localizer["lbl_SaveChanges"]</button>
            </div>
        </div>
    </div>
</div>
