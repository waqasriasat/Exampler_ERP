@model IEnumerable<Exampler_ERP.Models.Temp.FaceAttendanceForwardingViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["lbl_HumanResources"] + " - " + @Localizer["lbl_FaceAttendanceForwarding"];
}

@section PageScripts {
    <script>
        $(document).ready(function () {
            $('#postedButton').click(function () {
                var employeeData = [];
				function parseDecimal(val) {
					return parseFloat(val?.replace(/,/g, '') || '0');
				}
                // Collect data for all employees (assuming you have a way to identify each entry)
                $('.GVDetail').each(function () {
                   
                    var employeeID = $(this).find('.employeeID').val();
					var rawDate = $(this).find('.markDate').val();
					var markDate = new Date(rawDate).toISOString();
					var lateComingDeduction = parseDecimal($(this).find('.lateComingDeduction').val());
					var earlyGoingDeduction = parseDecimal($(this).find('.earlyGoingDeduction').val());
					var earlyComingGraceTime = parseInt($(this).find('.earlyComingGraceTime').val()) || 0;
					var earlyComingAmount = parseDecimal($(this).find('.earlyComingAmount').val());
					var lateGoingGraceTime = parseInt($(this).find('.lateGoingGraceTime').val()) || 0;
					var lateGoingAmount = parseDecimal($(this).find('.lateGoingAmount').val());
					
                    employeeData.push({
                        
                        employeeID: employeeID,
                        markDate: markDate,
                        lateComingDeduction: lateComingDeduction,
                        earlyGoingDeduction: earlyGoingDeduction,
                        earlyComingGraceTime: earlyComingGraceTime,
                        earlyComingAmount: earlyComingAmount,
                        lateGoingGraceTime: lateGoingGraceTime,
                        lateGoingAmount: lateGoingAmount
                    });
                });
				debugger;
				$.ajax({
					  url: '/FaceAttendanceForwarding/UpdatePosted',
					  type: 'POST',
					  contentType: 'application/json',
					  data: JSON.stringify(employeeData),
					  success: function (response) {
						  if (response.success) {
							 debugger;
						  } else {
							  debugger;
						  }
					  },
					  error: function (xhr, status, error) {
						  alert("An error occurred while updating Posted ID.");
					  }
				  });

            });
			$('#searchEmployeeForm').submit(function (e) {
				e.preventDefault(); // Prevent full page reload

				var form = $(this);
				var actionUrl = form.attr('action');

				// Serialize form data
				var formData = form.serialize();

				$.get(actionUrl, formData, function (partialHtml) {
					// Load only the relevant part of the response
					var html = $(partialHtml).find('#FaceAttendanceForwardingListContainer').html();
					$('#FaceAttendanceForwardingListContainer').html(html);
				});
			});

        });
    </script>
	<script>
	
		function printFaceAttendanceForwardings() {
			  var form = $('<form target="_blank" method="POST" action="@Url.Action("Print", "FaceAttendanceForwarding")"></form>');
			  form.append($('<input>').attr('name', 'Branch').val($('#Branch').val()));
			  form.append($('<input>').attr('name', 'MonthsTypeID').val($('#MonthsTypeID').val()));
			  form.append($('<input>').attr('name', 'YearsTypeID').val($('#YearsTypeID').val()));
			  $('body').append(form);
			  form.submit();
			  form.remove();
		  }

		  function excelFaceAttendanceForwardings() {
			  var form = $('<form target="_blank" method="POST" action="@Url.Action("ExportToExcel", "FaceAttendanceForwarding")"></form>');
			  form.append($('<input>').attr('name', 'Branch').val($('#Branch').val()));
			  form.append($('<input>').attr('name', 'MonthsTypeID').val($('#MonthsTypeID').val()));
			  form.append($('<input>').attr('name', 'YearsTypeID').val($('#YearsTypeID').val()));
			  $('body').append(form);
			  form.submit();
			  form.remove();
		  }
	</script>
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">@Localizer["lbl_HumanResources"] /</span> @Localizer["lbl_FaceAttendanceForwarding"]
</h4>
<form id="searchEmployeeForm" method="get" action="@Url.Action("Index", "FaceAttendanceForwarding")">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">@Localizer["lbl_SearchingBox"]</h5>
                <div class="Searching-Box-padding" style="padding-bottom: 15px;">
                    <div class="row mb-4">
                        <!-- From Date Field -->
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-bold">@Localizer["lbl_Month"]</label>
                            <select name="MonthsTypeID" id="MonthsTypeID" class="form-control">
                                @foreach (var item in ViewBag.MonthsTypeList)
                                {
                                    if (item.Value == ViewBag.MonthsTypeID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- To Date Field -->
                        <div class="col-md-4 mb-4">
                            <label for="YearsTypeID" class="form-label fw-bold">@Localizer["lbl_Year"]</label>
                            <select name="YearsTypeID" id="YearsTypeID" class="form-control">
                                @for (int year = DateTime.Now.Year; year >= 1900; year--)
                                {
                                    // Corrected to compare with ViewBag.YearsTypeID
                                    if (year == (ViewBag.YearsTypeID ?? 0))
                                    {
                                        <option value="@year" selected>@year</option>
                                    }
                                    else
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-bold">@Localizer["lbl_Branch"]</label>
							<select name="Branch" id="Branch" class="form-control">
                                @foreach (var item in ViewBag.BranchList)
                                {
                                    if (item.Value == ViewBag.BranchID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">@Localizer["lbl_Search"]</button>
                            <button type="button" id="postedButton" class="btn btn-primary">@Localizer["lbl_Post"]</button>
							<button type="button" class="btn btn-outline-secondary" onclick="excelFaceAttendanceForwardings()">@Localizer["lbl_Excel"]</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="printFaceAttendanceForwardings()">@Localizer["lbl_Print"]</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
