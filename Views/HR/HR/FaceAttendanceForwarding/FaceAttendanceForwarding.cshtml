@model IEnumerable<Exampler_ERP.Models.Temp.FaceAttendanceForwardingViewModel>

@{
    ViewData["Title"] = "HR - Face Attendance Forwarding";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit FaceAttendanceForwarding modal popup
            $('.editFaceAttendanceForwardingLink').click(function (e) {
                e.preventDefault();
                var FaceAttendanceForwardingId = $(this).data('id');
                $.get('@Url.Action("Edit", "FaceAttendanceForwarding")', { id: FaceAttendanceForwardingId }, function (data) {
                    $('#editFaceAttendanceForwardingModalContainer').html(data);
                    $('#editFaceAttendanceForwardingModal').modal('show');
                });
            });

            $('#editFaceAttendanceForwardingModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editFaceAttendanceForwardingForm').serialize();
                $.post('@Url.Action("Edit", "FaceAttendanceForwarding")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        // Show validation errors
                    }
                });
            });

            // Add new FaceAttendanceForwarding modal popup
            $('.addFaceAttendanceForwardingLink').click(function () {
                $.get('@Url.Action("Create", "FaceAttendanceForwarding")', function (data) {
                    $('#addFaceAttendanceForwardingModalContainer').html(data);
                    $('#addFaceAttendanceForwardingModal').modal('show');
                });
            });

            // Save new FaceAttendanceForwarding form
            $('#addFaceAttendanceForwardingModalContainer').on('click', '#saveNewFaceAttendanceForwarding', function () {
                var formData = $('#addFaceAttendanceForwardingForm').serialize();
                $.post('@Url.Action("Create", "FaceAttendanceForwarding")', formData, function (response) {
                    if (response.success) {
                        $('#addFaceAttendanceForwardingModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        // Handle validation errors or other cases
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addFaceAttendanceForwardingModalContainer').on('click', '#Close', function () {
                $('#addFaceAttendanceForwardingModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editFaceAttendanceForwardingModalContainer').on('click', '#Close', function () {
                $('#editFaceAttendanceForwardingModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete FaceAttendanceForwarding
            $('.deleteFaceAttendanceForwardingLink').click(function (e) {
                e.preventDefault();
                var FaceAttendanceForwardingId = $(this).data('id');
                $.post('@Url.Action("Delete", "FaceAttendanceForwarding")', { id: FaceAttendanceForwardingId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        // Handle errors
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
            $.widget("custom.autocomplete", $.ui.autocomplete, {
                _renderItem: function (ul, item) {
                    return $("<li>")
                        .append(item.label)  // Render the HTML content in `label`
                        .appendTo(ul);
                }
            });


            $("#searchEmployeeInput").autocomplete({
                source: function (request, response) {

                    $.ajax({
                        url: '@Url.Action("GetEmployeeSuggestions", "Employee")', // Ensure this matches the C# method
                        type: 'GET',
                        data: { term: request.term },
                        success: function (data) {

                            response($.map(data, function (item) {
                                return {
                                    label: item.label,  // HTML content to be displayed in suggestions
                                    id: item.id,     // Employee ID for the hidden input
                                    name: item.name,      // Full name to be used in the input field
                                    value: item.name
                                };
                            }));
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    debugger;
                    // Set the selected employee's ID and name
                    $("#EmployeeID").val(ui.item.id); // Set the hidden input for Employee ID
                    $("#searchEmployeeInput").val(ui.item.name); // Set the input field for Employee Name
                }
            });
        });
    </script>
    <script>
        function printFaceAttendanceForwardings() {
            var printWindow = window.open('@Url.Action("Print", "FaceAttendanceForwarding")', '_blank');
            printWindow.focus();
        }
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">HR /</span> Face Attendance Forwarding
</h4>
<form method="get" action="@Url.Action("Index", "FaceAttendanceForwarding")">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">Search Box</h5>
                <div class="Searching-Box-padding" style="padding-bottom: 15px;">
                    <div class="row mb-4">
                        <!-- From Date Field -->
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-bold">Month Type</label>
                            <select name="MonthsTypeID" class="form-control">
                                @foreach (var item in ViewBag.MonthsTypeList)
                                {
                                    if (item.Value == ViewBag.MonthsTypeID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- To Date Field -->
                        <div class="col-md-4 mb-4">
                            <label for="YearsTypeID" class="form-label fw-bold">Year</label>
                            <select name="YearsTypeID" class="form-control">
                                @for (int year = DateTime.Now.Year; year >= 1900; year--)
                                {
                                    // Corrected to compare with ViewBag.YearsTypeID
                                    if (year == (ViewBag.YearsTypeID ?? 0))
                                    {
                                        <option value="@year" selected>@year</option>
                                    }
                                    else
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4 mb-4">
                            <label class="form-label fw-bold">Branch</label>
                            <select name="Branch" class="form-control">
                                @foreach (var item in ViewBag.BranchList)
                                {
                                    if (item.Value == ViewBag.BranchID?.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="button" class="btn btn-primary addFaceAttendanceForwardingLink">Add New</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "FaceAttendanceForwarding")'">Excel</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="printFaceAttendanceForwardings()">Print</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
