@model Exampler_ERP.Models.CR_FaceAttendance
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addFaceAttendanceTimeAdjustModal" tabindex="-1" role="dialog" aria-labelledby="addFaceAttendanceTimeAdjustModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addFaceAttendanceTimeAdjustModalLabel">
                    <i class="fas fa-key me-2"></i>
                    @Localizer["lbl_AddNewFaceAttendanceTimeAdjust"]
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addFaceAttendanceTimeAdjustForm" method="post" asp-action="Create" asp-controller="FaceAttendanceTimeAdjust" enctype="multipart/form-data">
                    <h5 class="modal-title" style="padding-top:10px">@Localizer["lbl_FaceAttendanceTimeAdjustDetails"]</h5>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <!-- Employee Selection -->
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="EmployeeID" class="form-label fw-bold">@Localizer["lbl_EmployeeName"]</label>
                                    <select asp-for="EmployeeID" asp-items="@(new SelectList(ViewBag.EmployeesList, "Value", "Text"))" class="form-control form-control-lg"></select>
                                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- FaceAttendanceTimeAdjust Date sesion -->
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="MarkDate" class="form-label fw-bold">@Localizer["lbl_MarkDate"]</label>
                                    <input asp-for="MarkDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="MarkDate" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="InTime" class="form-label fw-bold">@Localizer["lbl_InTime"]</label>
                                    <input asp-for="InTime" class="form-control form-control-lg" type="time" />
                                    <span asp-validation-for="InTime" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="OutTime" class="form-label fw-bold">@Localizer["lbl_OutTime"]</label>
                                    <input asp-for="OutTime" class="form-control form-control-lg" type="time" />
                                    <span asp-validation-for="OutTime" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Hidden Fields -->
                    <input type="hidden" asp-for="DeleteYNID" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewFaceAttendanceTimeAdjust">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Existing JS logic for date and field management
</script>

<style>
    .readonly-background {
        background-color: #e9ecef;
        cursor: not-allowed;
    }

    .date-placeholder::placeholder {
        color: #6c757d;
        opacity: 1; /* Firefox */
    }
</style>
