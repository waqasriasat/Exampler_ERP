@model Exampler_ERP.Models.CR_FaceAttendance
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="editFaceAttendanceTimeAdjustModal" tabindex="-1" role="dialog" aria-labelledby="editFaceAttendanceTimeAdjustModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editFaceAttendanceTimeAdjustModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Over Time
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="editFaceAttendanceTimeAdjustForm">
                    <h5 class="modal-title" style="padding-top:10px">FaceAttendanceTimeAdjust Details</h5>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <!-- Employee Selection -->
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="EmployeeID" class="form-label fw-bold">@Localizer["lbl_Employee"] @Localizer["lbl_Name"]</label>
                                    <select asp-for="EmployeeID" asp-items="@(new SelectList(ViewBag.EmployeesList, "Value", "Text"))" class="form-control form-control-lg" disabled></select>
                                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- FaceAttendanceTimeAdjust Date sesion -->
                            <div class="row">
                                <div class="col-12">
                                    <label asp-for="MarkDate" class="form-label fw-bold">MarkDate</label>
                                    <input asp-for="MarkDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="MarkDate" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="InTime" class="form-label fw-bold">In Time</label>
                                    <input asp-for="InTime" class="form-control form-control-lg" type="time" />
                                    <span asp-validation-for="InTime" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="OutTime" class="form-label fw-bold">Out Time</label>
                                    <input asp-for="OutTime" class="form-control form-control-lg" type="time" />
                                    <span asp-validation-for="OutTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="EmployeeID" />
                    <input type="hidden" asp-for="DeleteYNID" />
                    <input type="hidden" asp-for="FaceAttendanceID" />



                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="Close" class="btn btn-secondary" data-dismiss="modal">@Localizer["lbl_Close"]</button>
                <button type="button" id="saveChanges" class="btn btn-success">@Localizer["lbl_SaveChanges"]</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>

</script>
