@model IEnumerable<Exampler_ERP.Models.HR_OverTime>

<!DOCTYPE html>
<html>
<head>
    <title>Print Over Time</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>Over Time List</h2>
    <table>
        <thead>
            <tr>
                <th>Over Time ID</th>
                <th>Employee Name</th>
                <th>Over Time Type</th>
                <th>Month</th>
                <th>Year</th>
                <th>Total Days</th>
                <th>Total Hours</th>
                <th>Rate</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var OverTime in Model)
            {
                <tr>
                    <td>@OverTime.OverTimeID</td>
                    <td>@($"{OverTime.Employee?.FirstName} {OverTime.Employee?.FatherName} {OverTime.Employee?.FamilyName}")</td>
                    <td>@(OverTime.OverTimeType?.OverTimeTypeName ?? "N/A")</td>
                    <td>@OverTime.MonthType?.MonthTypeName</td>
                    <td>@OverTime.Year</td>
                    <td>@OverTime.Days</td>
                    <td>@OverTime.Hours</td>
                    <td>@OverTime.OverTimeRate?.OverTimeRateValue</td>
                    <td>@OverTime.Amount</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
