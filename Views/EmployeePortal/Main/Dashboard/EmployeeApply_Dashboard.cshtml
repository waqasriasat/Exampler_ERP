@{
    Layout = "_EmployeeContentNavbarLayout";
    ViewData["Title"] = "Employee Portal - Apply";
}

@section PageScripts {
    <script src="~/js/pages-account-settings-account.js"></script>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" />
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Employee Portal /</span> Apply
</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item"><a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user me-1"></i> Apply</a></li>
            <li class="nav-item"><a class="nav-link" href="~/EmployeeReport_Dashboard/Index"><i class="bx bx-bell me-1"></i> Report</a></li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">Details</h5>
            <div class="row" style="padding: 30px 30px 0px 30px;">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-controller="Vacation" asp-action="Index">
                        <div class="shadow mb-4">
                            <div class="small-box bg-white">
                                <div class="inner Card1div">
                                    <strong class="CardFontColor">Vacation</strong>
                                    <h4 class="CardCountFontColor">
                                        @ViewBag.VacationCount
                                    </h4>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-print Card1I" aria-hidden="true"></i>
                                </div>
                                <div class="small-box-footer Card1A"></div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-controller="EmployeeRequest" asp-action="Index">
                        <div class="shadow mb-4">
                            <div class="small-box bg-white">
                                <div class="inner Card1div">
                                    <strong class="CardFontColor">Employee Request</strong>
                                    <h4 class="CardCountFontColor">
                                        @ViewBag.EmployeeRequestCount
                                    </h4>
                                </div>
                                <div class="icon">
                                    <i class="fa fa fa-file Card1I" aria-hidden="true"></i>
                                </div>
                                <div class="small-box-footer Card1A"></div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-controller="DocumentUpload" asp-action="Index">
                        <div class="shadow mb-4">
                            <div class="small-box bg-white">
                                <div class="inner Card1div">
                                    <strong class="CardFontColor">Documents Upload</strong>
                                    <h4 class="CardCountFontColor">
                                        @ViewBag.DocumentsUploadCount
                                    </h4>
                                </div>
                                <div class="icon">
                                    <i class="fa fa fa-file Card1I" aria-hidden="true"></i>
                                </div>
                                <div class="small-box-footer Card1A"></div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
