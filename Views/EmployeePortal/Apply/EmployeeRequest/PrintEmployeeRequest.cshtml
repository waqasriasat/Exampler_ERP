@model IEnumerable<Exampler_ERP.Models.HR_EmployeeRequestTypeApproval>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintEmployeeRequest"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_EmployeeRequestList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_EmployeeRequestID"]</th>
                <th>@Localizer["lbl_EmployeeRequestType"]</th>
                <th>@Localizer["lbl_ApplyDate"]</th>
                <th>@Localizer["lbl_Note"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var EmployeeRequest in Model)
            {
                <tr>
                    <td>@EmployeeRequest.EmployeeRequestTypeApprovalID</td>
                    <td>@(EmployeeRequest.EmployeeRequestType?.EmployeeRequestTypeName ?? "N/A")</td>
                    <td>@EmployeeRequest.Date</td>
                    <td>@EmployeeRequest.Notes</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
