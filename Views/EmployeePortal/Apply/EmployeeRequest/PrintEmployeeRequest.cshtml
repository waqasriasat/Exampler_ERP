@model IEnumerable<Exampler_ERP.Models.HR_EmployeeRequestTypeApproval>

<!DOCTYPE html>
<html>
<head>
    <title>Print EmployeeRequestes</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>EmployeeRequest List</h2>
    <table>
        <thead>
            <tr>
                <th>EmployeeRequest ID</th>
                <th>EmployeeRequest Type</th>
                <th>Request Date</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var EmployeeRequest in Model)
            {
                <tr>
                    <td>@EmployeeRequest.EmployeeRequestTypeApprovalID</td>
                    <td>@(EmployeeRequest.EmployeeRequestType?.EmployeeRequestTypeName ?? "N/A")</td>
                    <td>@EmployeeRequest.Date</td>
                    <td>@EmployeeRequest.Notes</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
