@model Exampler_ERP.Models.HR_Vacation

@{
    var EmployeeName = Context.Session.GetString("EmployeeName");
}

<div class="modal fade" id="editVacationModal" tabindex="-1" role="dialog" aria-labelledby="editVacationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editVacationModalLabel">
                    <i class="fas fa-edit me-2"></i>Edit Vacation
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <!-- Edit Vacation Form -->
                <form id="editVacationForm" method="post" asp-action="Edit" asp-controller="Vacation" enctype="multipart/form-data">
                    @Html.Partial("~/Views/EmployeePortal/Apply/Vacation/_EditVacation.cshtml", Model)
                </form>

                <!-- Success Message -->
                <div id="successMessage" class="alert alert-success text-center mt-3" style="display:none;"></div>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle"></i> Close
                </button>
                <button type="submit" id="saveVacationChanges" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>
