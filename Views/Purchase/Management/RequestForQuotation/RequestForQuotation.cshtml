    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Request For Quotation @Localizer["lbl_List"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-2">
                                    <p class="text-nowrap">Purchase Request #</p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">@Localizer["lbl_Date"] </p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">@Localizer["lbl_ItemName"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Quantity</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_Status"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-1 col-md-1 col-lg-1">
                            <p class="text-nowrap">Forword</p>
                        </div>
                        <div class="col-1 col-md-1 col-lg-1">
                            <p class="text-nowrap">@Localizer["lbl_Print"] </p>
                        </div>
                        </div>
                    </div>
                </div>
            <div id="requestForQuotationListContainer">
                @Html.Partial("~/Views/Purchase/Management/RequestForQuotation/_RequestForQuotationListPartial.cshtml", Model)
            </div>
            </div>

        </div>
    </div>
    

<!-- Include the modal partial -->
<div id="forwordRequestForQuotationModalContainer"></div>


