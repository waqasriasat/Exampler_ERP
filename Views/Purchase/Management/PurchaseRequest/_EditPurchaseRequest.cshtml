@model Exampler_ERP.Models.Temp.PurchaseRequestIndexViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="PurchaseRequests.PurchaseRequestID" />
<input type="hidden" asp-for="PurchaseRequests.FinalApprovalID" />
<input type="hidden" asp-for="PurchaseRequests.ProcessTypeApprovalID" />
<input type="hidden" asp-for="PurchaseRequests.RequestStatusTypeID" />

<!-- Table for Added Rows -->
<div class="table-responsive mb-3">
    <table class="table table-bordered" id="PurchaseRequestTable">
        <thead class="table-light">
            <tr>
                <th class="headercontrol headerwidth">
                    <div class="col-md-12">
                        <label for="ItemName" class="form-label fw-bold">Item Name</label>
                        <select id="ItemName" name="ItemName" class="form-select">
                            <option value="">Select Item</option>
                            @foreach (var type in ViewBag.ItemList)
                            {
                                <option value="@type.Value">@type.Text</option>
                            }
                        </select>
                    </div>
                </th>
                <th class="headercontrol">
                    <div class="col-md-12">
                        <label for="UnitType" class="form-label fw-bold">Unit Type</label>
                        <input type="text" id="UnitType" name="UnitType" class="form-control" />
                    </div>
                </th>
                <th class="headercontrol">
                    <div class="col-md-12">
                        <label for="Quantity" class="form-label fw-bold">Quantity</label>
                        <input type="text" id="Quantity" name="Quantity" class="form-control" />
                    </div>
                </th>
                <th class="headercontrol">
                    <div class="col-md-12">
                        <label for="PriorityLevel" class="form-label fw-bold">Priority Level</label>
                        <input type="text" id="PriorityLevel" name="PriorityLevel" class="form-control" />
                    </div>
                </th>
                <th class="headercontrol">
                    <div class="col-md-12" style="text-align-last: center;">
                        <button type="button" class="btn btn-primary add-row width-button">Add</button>
                    </div>
                </th>
            </tr>
            <tr><th style="border: none;"></th></tr>
            <tr>
                <th>Item Name</th>
                <th>Unit Type</th>
                <th>Quantity</th>
                <th>Priority Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PurchaseRequests.PurchaseRequestDetails != null && Model.PurchaseRequests.PurchaseRequestDetails.Count > 0)

            {

                for (int i = 0; i < Model.PurchaseRequests.PurchaseRequestDetails.Count; i++)

                {
                    <tr>
                        <td>
                            <select class="form-select" name="PurchaseRequestDetails[@i].ItemID">
                                <option value="">Select Item</option>
                                @foreach (var type in ViewBag.ItemNameList)

                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </td>
                        <td>
                            <select class="form-select" name="PurchaseRequestDetails[@i].UnitTypeID">
                                <option value="">Select Unit</option>
                                @foreach (var type in ViewBag.ItemUnitList)

                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="PurchaseRequestDetails[@i].Quantity" value="@Model.PurchaseRequests.PurchaseRequestDetails[i].Quantity" />
                        </td>
                        <td>
                            <select class="form-select" name="PurchaseRequestDetails[@i].PriorityLevel">
                                <option value="">Select Priority Level</option>
                                @foreach (var type in ViewBag.PriorityLevelList)

                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </td>
                        <td style="text-align-last: center;">
                            <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                        </td>
                    </tr>
                }

            }

        </tbody>
    </table>
</div>

<!-- Remarks Section -->
<div class="row mb-3">
    <div class="col-md-12">
        <label asp-for="PurchaseRequests.Remarks" class="form-label fw-bold">Remarks</label>
        <textarea asp-for="PurchaseRequests.Remarks" class="form-control" rows="3"></textarea>
    </div>
</div>
