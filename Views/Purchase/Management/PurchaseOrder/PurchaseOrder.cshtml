                    <div class="col-md-4 text-end">
                        <button type="button" class="btn btn-primary makePurchaseOrderLink">Make Purchase Order</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "PurchaseOrder")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printListPurchaseOrderes()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
