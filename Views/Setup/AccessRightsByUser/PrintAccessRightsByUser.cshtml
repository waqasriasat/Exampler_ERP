@model IEnumerable<Exampler_ERP.Models.CR_AccessRightsByUser>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_PrintLayout";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintAccessRightsByUserSetup "]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
    <h2>@Localizer["lbl_AccessRightsByUserSetupList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_UserID"]</th>
                <th>@Localizer["lbl_UserName"]</th>
                <th>@Localizer["lbl_Rank"]</th>
                <th>@Localizer["lbl_RoleType"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var AccessRightsByUser in Model)
            {
                <tr>
                    @* <td>@AccessRightsByUser.AccessRightsByRoleID</td>
                    <td>@(AccessRightsByUser.ProcessType?.ProcessTypeName ?? "N/A")</td>
                    <td>@AccessRightsByUser.Rank</td>
                    <td>@AccessRightsByUser.RoleTypeID</td> *@
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
