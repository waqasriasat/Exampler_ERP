@model List<Exampler_ERP.Models.CR_AccessRightsByRole>


<script>
    $(document).ready(function () {
        console.log('Document is ready.');

        // Function to update hidden fields based on checkboxes and ranks
        function updateHiddenFields() {
            $('#hiddenFieldsContainer').empty(); // Clear existing hidden fields

            var RoleID = $('#RoleID').val(); // Get the RoleID value
            var checkedRoles = $('.role-checkbox:checked');
            checkedRoles.each(function (index) {
                var AccessRightID = $(this).val();
                var rankInput = $('#rank_' + AccessRightID);
                var rank = rankInput.val();

                $('#hiddenFieldsContainer').append(
                    `<div class="row">
                                <input type="hidden" name="AccessRightsByRoles[${index}].RoleID" value="${RoleID}" id="hidden_RoleID_${AccessRightID}" />
                                            <input type="hidden" name="AccessRightsByRoles[${index}].AccessRightID" value="${AccessRightID}" id="hidden_AccessRightID_${AccessRightID}" />
                        </div>`
                );
            });
        }

        // Event handler for role checkbox change
        $(document).on('change', '.role-checkbox', function () {
            // debugger;
            var AccessRightID = $(this).val();
            var rankInput = $('#rank_' + AccessRightID);

            if ($(this).is(':checked')) {
                var maxRank = 0;
                $('.rank').each(function () {
                    var val = parseInt($(this).val());
                    if (val > maxRank) {
                        maxRank = val;
                    }
                });
                rankInput.val(maxRank + 1).removeAttr('readonly');
                reorderRanks();
            } else {
                rankInput.val('').attr('readonly', true);
                reorderRanks();
            }

            // Update hidden fields after checkbox change
            updateHiddenFields();
        });

        function reorderRanks() {
            // debugger;
            var checkedRoles = [];
            $('.role-checkbox:checked').each(function () {
                checkedRoles.push($(this).val());
            });

            checkedRoles.sort(function (a, b) {
                return $('#rank_' + a).val() - $('#rank_' + b).val();
            });

            for (var i = 0; i < checkedRoles.length; i++) {
                $('#rank_' + checkedRoles[i]).val(i + 1);
            }
        }

        // Initial call to update hidden fields on page load
        updateHiddenFields();
    });

</script>

<div class="modal fade" id="editAccessRightsByRoleModal" tabindex="-1" role="dialog" aria-labelledby="editAccessRightsByRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editAccessRightsByRoleModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Edit Access Rights By Role Setup
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="editAccessRightsByRoleForm">
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label for="RoleName" class="form-label fw-bold">Role Name</label>
                                @* <input type="text" class="form-control form-control-lg" id="RoleName" value="@Model.FirstOrDefault()?.role?.RoleName" disabled />
                                <input type="hidden" id="RoleID" value="@Model.FirstOrDefault()?." /> *@
                            </div>
                        </div>
                    </div>

                    <div class="row role-container">
                        <div class="col-9">
                            @foreach (var role in (IEnumerable<dynamic>)ViewBag.RoleList)
                            {
                                <div class="form-check">
                                    <input class="form-check-input role-checkbox" type="checkbox" name="AccessRightIDs" value="@role.Value" id="role_@role.Value" @(Model.Any(m => m.AccessRightID == role.Value) ? "checked" : "") />
                                    <label class="form-control form-check-label" for="role_@role.Value">@role.Text</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="hiddenFieldsContainer">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <div class="row">
                                 @* <input style="width:100px" type="text" name="AccessRightsByRoles[@i].RoleID" value="@Model[i]." id="hidden_RoleID_@Model[i].RoleID" />
                                 <input style="width:100px" type="text" name="AccessRightsByRoles[@i].AccessRightID" value="@Model[i].AccessRightID" id="hidden_AccessRightID_@Model[i].AccessRightID" /> *@
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">Close</button>
                <button type="submit" class="btn btn-success" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
