                                    <p class="text-nowrap">@lblEmployeeName</p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">@lblProcessType</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@lblRank</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@lblPendingDate</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-1 col-md-1 col-lg-4">
                            <div class="row">
                                <div class="col-4">
                                    <p class="text-nowrap">@lblApproval</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">@lblDetails</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">@lblAction</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="ProcessTypeApprovalListContainer">
                    @Html.Partial("~/Views/MasterInfo/ApprovalsRequest/_ApprovalsRequest.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</div>

