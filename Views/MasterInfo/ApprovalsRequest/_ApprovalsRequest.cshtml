@model IEnumerable<Exampler_ERP.Models.CR_ProcessTypeApprovalDetail>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Process Approvals @Localizer["lbl_List"]</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-11 col-md-11 col-lg-8">
                            <div class="row">
                                <div class="col-3">
                                    <p class="text-nowrap">@Localizer["lbl_EmployeeName"]</p>
                                </div>
                                <div class="col-3">
                                    <p class="text-nowrap">Process @Localizer["lbl_Name"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_Rank"]</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">@Localizer["lbl_PendingDate"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-1 col-md-1 col-lg-4">
                            <div class="row">
                                <div class="col-4">
                                    <p class="text-nowrap">@Localizer["lbl_Approval"]</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">@Localizer["lbl_Details"]</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Action</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-11 col-md-11 col-lg-8">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-3">
                                        <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_EmployeeName"] : </span>@item.CR_ProcessTypeApproval?.Employee?.FirstName @item.CR_ProcessTypeApproval?.Employee?.FatherName @item.CR_ProcessTypeApproval?.Employee?.FamilyName</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-3">
                                        <p class="text-nowrap"><span class="smallAdd">Process Name : </span>@(item.CR_ProcessTypeApproval?.ProcessType?.ProcessTypeName ?? "N/A")  </p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_Rank"] : </span>@Html.DisplayFor(modelItem => item.Rank)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">@Localizer["lbl_PendingDate"] : </span>@item.Date.ToString("dd-MM-yyyy HH:mm:ss")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1 col-md-1 col-lg-4">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="javascript:void(0)" class="approvalsProcessTypeApprovalLink" data-id="@item.ProcessTypeApprovalID">
                                                <i class="bx bx-book-open" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="javascript:void(0)" class="detailsProcessTypeApprovalLink" data-id="@item.ProcessTypeApprovalID">
                                                <i class="bx bx-detail" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="javascript:void(0)" class="actionsProcessTypeApprovalLink" data-id="@item.ProcessTypeApprovalDetailID">
                                                <i class="bx bx-bookmarks" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
