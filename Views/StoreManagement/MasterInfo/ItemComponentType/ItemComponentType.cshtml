@model IEnumerable<Exampler_ERP.Models.Settings_ItemComponentType>

@{
    ViewData["Title"] = "Master Information - Item Component Type";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            // Edit ItemComponentType modal popup
            $('.editItemComponentTypeLink').click(function (e) {
                e.preventDefault();
                var ItemComponentTypeId = $(this).data('id');
                $.get('@Url.Action("Edit", "ItemComponentType")', { id: ItemComponentTypeId }, function (data) {
                    $('#editItemComponentTypeModalContainer').html(data);
                    $('#editItemComponentTypeModal').modal('show');
                });
            });

            $('#editItemComponentTypeModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editItemComponentTypeForm').serialize();
                $.post('@Url.Action("Edit", "ItemComponentType")', formData, function (response) {
                    if (response.success) {
                        // Reload the page or update the part of the page with the updated data
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Add new ItemComponentType modal popup
            $('.addItemComponentTypeLink').click(function () {
                $.get('@Url.Action("Create", "ItemComponentType")', function (data) {
                    $('#addItemComponentTypeModalContainer').html(data);
                    $('#addItemComponentTypeModal').modal('show');
                });
            });

            // Save new ItemComponentType form
            $('#addItemComponentTypeModalContainer').on('click', '#saveNewItemComponentType', function () {
                var formData = $('#addItemComponentTypeForm').serialize();
                $.post('@Url.Action("Create", "ItemComponentType")', formData, function (response) {
                    if (response.success) {
                        $('#addItemComponentTypeModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Close Modal Add Contrainer
            $('#addItemComponentTypeModalContainer').on('click', '#Close', function () {
                $('#addItemComponentTypeModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Close Modal Edit Contrainer
            $('#editItemComponentTypeModalContainer').on('click', '#Close', function () {
                $('#editItemComponentTypeModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete ItemComponentType
            $('.deleteItemComponentTypeLink').click(function (e) {
                e.preventDefault();
                var ItemComponentTypeId = $(this).data('id');
                $.post('@Url.Action("Delete", "ItemComponentType")', { id: ItemComponentTypeId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printItemComponentTypes() {
            var printWindow = window.open('@Url.Action("Print", "ItemComponentType")', '_blank');
            printWindow.focus();
        }
        $('#searchItemComponentTypeButton').click(function () {
            var searchValue = $('#searchItemComponentTypeInput').val();
            window.location.href = '@Url.Action("Index", "ItemComponentType")?searchItemComponentTypeName=' + searchValue;
        });
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Master Information /</span> Item Component Type
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">Searching Box</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Item Component Type name" id="searchItemComponentTypeInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchItemComponentTypeButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                        <button type="button" class="btn btn-primary addItemComponentTypeLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "ItemComponentType")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printItemComponentTypes()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Item Component Type List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-10">
                            <div class="row">
                                <div class="col-4">
                                    <p class="text-nowrap">Item Category Type Name</p>
                                </div>
                                <div class="col-4">
                                    <p class="text-nowrap">Item Component Type Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Active</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-2">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                                <div class="col-6">
                                    <p class="text-nowrap">Delete</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-10 col-lg-10">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">Item Category Type Name : </span>@Html.DisplayFor(modelItem => item.ItemCategoryType.ItemCategoryTypeName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-4">
                                        <p class="text-nowrap"><span class="smallAdd">Item Component Type Name : </span>@Html.DisplayFor(modelItem => item.ItemComponentTypeName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap">
                                            <span class="smallAdd">Active : </span>
                                            @if (item.ActiveYNID == 1)
                                            {
                                                <span>Yes</span>
                                            }
                                            else if (item.ActiveYNID == 2)
                                            {
                                                <span>No</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 col-md-2 col-lg-2">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editItemComponentTypeLink" data-id="@item.ItemComponentTypeID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="deleteItemComponentTypeLink" data-id="@item.ItemComponentTypeID">
                                                <i class="fa-regular fa-trash-can" style="font-size: large; color:maroon; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Include the modal partial -->
<div id="editItemComponentTypeModalContainer"></div>
<div id="addItemComponentTypeModalContainer"></div>
