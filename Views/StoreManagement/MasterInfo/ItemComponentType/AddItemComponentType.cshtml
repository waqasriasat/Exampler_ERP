@model Exampler_ERP.Models.Settings_ItemComponentType
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="modal fade" id="addItemComponentTypeModal" tabindex="-1" role="dialog" aria-labelledby="addItemComponentTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addItemComponentTypeModalLabel">
                    <i class="fas fa-key me-2"></i>
                    Add New Item Component Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form id="addItemComponentTypeForm">
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="ItemCategoryTypeID" class="form-label fw-bold">Select ItemCategory</label>
                            <select asp-for="ItemCategoryTypeID" asp-items="@(new SelectList(ViewBag.ItemCategoryList, "Value", "Text", Model.ItemCategoryTypeID))" class="form-control form-control-lg">
                            </select>
                            <span asp-validation-for="ItemCategoryTypeID" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label for="ItemComponentTypeName" class="form-label fw-bold">Item Component Type Name</label>
                            <input type="text" class="form-control form-control-lg" id="ItemComponentTypeName" name="ItemComponentTypeName" value="@Model.ItemComponentTypeName" />
                        </div>
                        <div class="col-6">
                            <label asp-for="ItemComponentDataType" class="form-label fw-bold">Select Data Type</label>
                            <select asp-for="ItemComponentDataType" asp-items="@(new SelectList(ViewBag.DataTypeList, "Value", "Text", Model.ItemComponentDataType))" class="form-control form-control-lg">
                                <option>@Localizer["lbl_Pleaseselect"]</option>
                            </select>
                            <span asp-validation-for="ItemComponentDataType" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="ActiveYNID" class="form-label fw-bold">@Localizer["lbl_Active"]</label>
                            <select asp-for="ActiveYNID" asp-items="@(new SelectList(ViewBag.ActiveYNIDList, "Value", "Text"))" class="form-control form-control-lg">
                                <option>@Localizer["lbl_Pleaseselect"]</option>
                            </select>
                            <span asp-validation-for="ActiveYNID" class="text-danger"></span>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="Close">@Localizer["lbl_Close"]</button>
                <button type="button" class="btn btn-success" id="saveNewItemComponentType">@Localizer["lbl_Save"] </button>
            </div>
        </div>
    </div>
</div>
