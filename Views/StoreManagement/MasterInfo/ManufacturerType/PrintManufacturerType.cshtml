@model IEnumerable<Exampler_ERP.Models.Settings_ManufacturerType>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintManufacturerType"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_ManufacturerTypeList"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_ManufacturerTypeID"]</th>
                <th>@Localizer["lbl_ManufacturerTypeName"]</th>
                <th>@Localizer["lbl_Active"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ManufacturerType in Model)
            {
                <tr>
                    <td>@ManufacturerType.ManufacturerTypeID</td>
                    <td>@ManufacturerType.ManufacturerTypeName</td>
                    <td>@(ManufacturerType.ActiveYNID == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
