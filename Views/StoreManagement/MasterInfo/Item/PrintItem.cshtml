@model IEnumerable<Exampler_ERP.Models.ST_Item>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
	<title>@Localizer["lbl_PrintItem"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body style="background-color:white">
	<h2>@Localizer["lbl_ItemList"]</h2>
    <table>
        <thead>
            <tr>
				<th>@Localizer["lbl_ItemID"]</th>
                <th>@Localizer["lbl_ItemCode"]</th>
                <th>@Localizer["lbl_ItemName"]</th>
                <th>@Localizer["lbl_Status"]</th>
                <th>@Localizer["lbl_Unit"]</th>
                <th>@Localizer["lbl_Category"]</th>
                <th>@Localizer["lbl_Manufacturer"]</th>
                <th>@Localizer["lbl_RecorderLevelMin"]</th>
                <th>@Localizer["lbl_RecorderLevelMax"]</th>
                <th>@Localizer["lbl_BinLocation"]</th>
                <th>@Localizer["lbl_BarCode"]</th>
                <th>@Localizer["lbl_OpeningBalance"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model)
            {
                <tr>
                    <td>@Item.ItemID</td>
                    <td>@Item.ItemCode</td>
                    <td>@Item.ItemName</td>
                    <td>@(Item.ActiveYNID == 1 ? "Yes" : "No")</td>
                    <td>@Item.UnitType.UnitTypeName</td>
                    <td>@Item.ItemCategoryType.ItemCategoryTypeName</td>
                    <td>@Item.ManufacturerType.ManufacturerTypeName</td>
                    <td>@Item.ReorderLevelMin</td>
                    <td>@Item.ReorderLevelMax</td>
                    <td>@Item.BinLocation</td>
                    <td>@Item.BarCode</td>
                    <td>@Item.OpeningBalance</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.print();
    </script>
</body>
</html>
