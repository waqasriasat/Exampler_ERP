@model Exampler_ERP.Models.Temp.StockListViewModel

@{
    ViewData["Title"] = "Store Management - Stock";
}

@section PageScripts {

    <script>
        $(document).ready(function () {
            $('.editStockLink').click(function (e) {
                e.preventDefault();
                var ItemId = $(this).data('id');
                $.get('@Url.Action("Edit", "Stock")', { id: ItemId }, function (data) {
                    $('#editStockModalContainer').html(data);
                    $('#editStockModal').modal('show');
                });
            });

            $('#editStockModalContainer').on('click', '#saveChanges', function () {
                var formData = $('#editStockForm').serialize();
                console.log("Serialized form data:", formData); // Log serialized data for debugging
                $.post('@Url.Action("Edit", "Stock")', formData, function (response) {
                    if (response.success) {
                        $('#editStockModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Close Modal Edit Contrainer
            $('#editStockModalContainer').on('click', '#Close', function () {
                $('#editStockModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Add new Item modal popup
            $('.addStockLink').click(function () {
                $.get('@Url.Action("Create", "Stock")', function (data) {
                    $('#addStockModalContainer').html(data);
                    $('#addStockModal').modal('show');
                });
            });

            // Save new Stock form
            $('#addStockModalContainer').on('click', '#saveNewStock', function () {
                var formData = $('#addStockForm').serialize();
                $.post('@Url.Action("Create", "Stock")', formData, function (response) {
                    if (response.success) {
                        $('#addStockModal').modal('hide');
                        location.reload(); // Reload the page to reflect changes
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            

            // Close Modal add Contrainer
            $('#addStockModalContainer').on('click', '#Close', function () {
                $('#addStockModal').modal('hide'); // Close the modal directly
                // Additional logic if needed
            });

            // Delete Stock
            $('.deleteStockLink').click(function (e) {
                e.preventDefault();
                var StockId = $(this).data('id');
                $.post('@Url.Action("Delete", "Stock")', { id: StockId }, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        showErrorAlert(response.message);
                    }
                });
            });

            // Print functionality
            $('#printButton').click(function () {
                window.print();
            });
        });
    </script>
    <script>
        function printStocks() {
            var printWindow = window.open('@Url.Action("Print", "Stock")', '_blank');
            printWindow.focus();
        }
        $('#searchItemButton').click(function () {
            var searchValue = $('#searchItemInput').val();
            window.location.href = '@Url.Action("Index", "Stock")?searchItemName=' + searchValue;
        });
    </script>
}
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Store Management /</span> Stock
</h4>
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <h5 class="card-header">Searching Box</h5>
            <div class="Searching-Box-padding">
                <div class="row mb-4">
                    <div class="col-md-8" style="padding-bottom: 15px;">
                        <!-- Search Field and Button -->
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Item name" id="searchItemInput">
                            <button class="btn btn-outline-secondary" type="button" id="searchItemButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <!-- Action Buttons -->
                        <button type="button" class="btn btn-primary addStockLink">Add New</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("ExportToExcel", "Stock")'">Excel</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printStocks()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Stock List</h5>
            <div class="">
                <div class="col-lg-12 col-md-12 col-sm-12 mb-12 SmallHide GVHeader">
                    <div class="row">
                        <div class="col-10 col-md-10 col-lg-11">
                            <div class="row">
                                <div class="col-6">
                                    <p class="text-nowrap">Item Name</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Stock Quantity</p>
                                </div>
                                <div class="col-2">
                                    <p class="text-nowrap">Stock Count</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 col-md-2 col-lg-1">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-nowrap">Edit</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.ItemsWithStockQuantity)
                {
                    <div class="col-12 col-md-12 col-lg-12 GVDetail">
                        <div class="row">
                            <div class="col-10 col-md-10 col-lg-11">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-6">
                                        <p class="text-nowrap"><span class="smallAdd">Item Name : </span>@Html.DisplayFor(modelItem => item.ItemName)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">Stock Quantity : </span>@Html.DisplayFor(modelItem => item.StockQuantity)</p>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-2">
                                        <p class="text-nowrap"><span class="smallAdd">Stock Count : </span>@Html.DisplayFor(modelItem => item.StockCount)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2 col-md-2 col-lg-1">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="#" class="editStockLink" data-id="@item.ItemID">
                                                <i class="fa fa-pencil" style="font-size: large; color:steelblue; line-height: 2;"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<!-- Include the modal partial -->
<div id="addStockModalContainer"></div>
<div id="editStockModalContainer"></div>
