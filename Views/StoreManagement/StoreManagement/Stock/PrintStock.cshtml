@model IEnumerable<Exampler_ERP.Models.Temp.ItemWithStockQuantityViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["lbl_PrintStock"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: white;
        }
    </style>
</head>
<body>
    <h2>@Localizer["lbl_StockList"]</h2>
    <table>
        <thead>
            <tr>
                <th>@Localizer["lbl_ItemID"]</th>
                <th>@Localizer["lbl_ItemName"]</th>
                <th>@Localizer["lbl_StockQuantity"]</th>
                <th>@Localizer["lbl_StockCount"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model)
            {
                <tr>
                    <td>@stock.ItemID</td>
                    <td>@stock.ItemName</td>
                    <td>@stock.StockQuantity</td>
                    <td>@stock.StockCount</td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        window.onload = function () {
            window.print();
            setTimeout(function () { window.close(); }, 500);
        };
    </script>
</body>
</html>
