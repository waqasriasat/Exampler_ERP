@model Exampler_ERP.Models.Temp.MaterialRequisitionsIndexViewModel

<style>
    .ui-autocomplete {
        z-index: 1000 !important;
    }

    .center-button {
        margin-top: 32px;
        text-align: center;
    }

    .width-button {
        width: 120px;
    }

    .modal-header {
        padding: 1rem 1.5rem;
    }

    

    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }
</style>

<div class="modal fade" id="addMaterialRequisitionModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="--bs-modal-width: 80rem;">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">Add Material Requisition</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addMaterialRequisitionForm" enctype="multipart/form-data">
                    <!-- Row for Inputs -->
                    <div class="row g-3 mb-3 align-items-end">
                        <div class="col-md-6">
                            <label for="ItemName" class="form-label fw-bold">Item Name</label>
                            <select id="ItemName" class="form-select">
                                <option value="">Select Item</option>
                                @foreach (var type in ViewBag.ItemList)

                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="Quantity" class="form-label fw-bold">Quantity</label>
                            <input type="text" id="Quantity" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="RequiredDate" class="form-label fw-bold">Required Date</label>
                            <input type="date" id="RequiredDate" class="form-control" />
                        </div>
                        <div class="col-md-2 center-button">
                            <button type="button" class="btn btn-primary add-row width-button">Add</button>
                        </div>
                    </div>

                    <!-- Table for Added Rows -->
                    <div class="table-responsive mb-3">
                        <table class="table table-bordered" id="MaterialRequisitionTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Required Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select class="form-select" name="MaterialRequisitionDetails[0].ItemID">
                                            <option value="">Select Item</option>
                                            @foreach (var type in ViewBag.ItemNameList)

                                            {
                                                <option value="@type.Value">@type.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" name="MaterialRequisitionDetails[0].Quantity" />
                                    </td>
                                    <td>
                                        <input type="date" class="form-control" name="MaterialRequisitionDetails[0].RequiredDate" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Remarks Section -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="Remarks" class="form-label fw-bold">Remarks</label>
                            <textarea name="Remarks" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Add a new row
        $(document).on('click', '.add-row', function () {
            const itemName = $('#ItemName').val();
            const itemText = $('#ItemName option:selected').text();
            const quantity = parseFloat($('#Quantity').val()) || 0;
            const requiredDate = $('#RequiredDate').val();

            // Validate inputs
            if (!itemName || quantity <= 0 || !requiredDate) {
                alert('Please fill out all required fields: Item Name, Quantity, and Required Date.');
                return;
            }

            const tableBody = $('#MaterialRequisitionTable tbody');
            const rowCount = tableBody.find('tr').length;

            const dynamicRow = `
                        <tr>
                            <td>
                                <input type="text" class="form-control" name="MaterialRequisitionDetails[${rowCount}].ItemName" value="${itemText}" readonly />
                            </td>
                            <td>
                                <input type="text" class="form-control" name="MaterialRequisitionDetails[${rowCount}].Quantity" value="${quantity.toFixed(2)}" readonly />
                            </td>
                            <td>
                                <input type="date" class="form-control" name="MaterialRequisitionDetails[${rowCount}].RequiredDate" value="${requiredDate}" readonly />
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                            </td>
                        </tr>`;

            tableBody.append(dynamicRow);

            $('#ItemName').val('');
            $('#Quantity').val('');
            $('#RequiredDate').val('');
        });

        // Remove a row
        $(document).on('click', '.remove-row', function () {
            $(this).closest('tr').remove();
        });
    });
</script>
