@model Exampler_ERP.Models.Temp.MaterialRequisitionsIndexViewModel

<style>
    .ui-autocomplete {
        z-index: 1000 !important;
    }

    .center-button {
        margin-top: 32px;
        text-align: center;
    }

    .width-button {
        width: 120px;
    }

    .modal-header {
        padding: 1rem 1.5rem;
    }
    .table th,
    .table td {
        width: 20%; /* Adjust this percentage to match the inputs */
    }

    .form-label,
    .form-control,
    .form-select {
        width: 100%; /* Ensures the input elements stretch to match */
    }

    .table .form-control,
    .table .form-select {
        border: none;
        background-color: transparent; /* Optional: for read-only appearance */
    }

   
</style>

<div class="modal fade" id="addMaterialRequisitionModal" tabindex="-1" role="dialog" aria-labelledby="addMaterialRequisitionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="--bs-modal-width: 80rem;">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="addMaterialRequisitionModalLabel"><i class="fas fa-key me-2"></i>Add Material Requisition</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addMaterialRequisitionForm" enctype="multipart/form-data" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Row for Inputs -->
                    <div class="row g-3 mb-3 align-items-end">
                        <div class="col-md-4">
                            <label for="ItemName" class="form-label fw-bold">Item Name</label>
                            <select id="ItemName" name="ItemName" class="form-select  form-select-lg">
                                <option value="">Select Item</option>
                                @foreach (var type in ViewBag.ItemList)

                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="Quantity" class="form-label fw-bold">Quantity</label>
                            <input type="text" id="Quantity" name="Quantity" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="BalanceQuantity" class="form-label fw-bold">Balance Quantity</label>
                            <input type="text" id="BalanceQuantity" name="BalanceQuantity" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label for="RequiredDate" class="form-label fw-bold">Required Date</label>
                            <input type="date" id="RequiredDate" name="RequiredDate" class="form-control" />
                        </div>
                        <div class="col-md-2 center-button">
                            <button type="button" class="btn btn-primary add-row width-button">Add</button>
                        </div>
                    </div>
                    <hr />
                    <!-- Table for Added Rows -->
                    <div class="table-responsive mb-3">
                        <table class="table table-bordered" id="MaterialRequisitionTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="col-md-4">Item Name</th>
                                    <th>Quantity</th>
                                    <th>Balance Quantity</th>
                                    <th>Required Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MaterialRequisitions.MaterialRequisitionDetails != null && Model.MaterialRequisitions.MaterialRequisitionDetails.Count > 0)

                                {

                                    for (int i = 0; i < Model.MaterialRequisitions.MaterialRequisitionDetails.Count; i++)

                                    {
                                <tr>
                                    <td class="col-md-4">
                                                <select class="form-select" name="MaterialRequisitions.MaterialRequisitionDetails[@i].ItemID">
                                            <option value="">Select Item</option>
                                            @foreach (var type in ViewBag.ItemNameList)

                                            {
                                                <option value="@type.Value">@type.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                                <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].Quantity" value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].Quantity" />
                                    </td>
                                    <td>
                                                <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].BalanceQuantity" value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].BalanceQuantity" />
                                    </td>
                                    <td>
                                                <input type="date" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].RequiredDate" value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].RequiredDate" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                                    </td>
                                </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>

                    <!-- Remarks Section -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="Remarks" class="form-label fw-bold">Remarks</label>
                            <textarea name="Remarks" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="saveNewMaterialRequisition" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
    
    $(document).ready(function () {
        $('#MaterialRequisitionTable tbody').empty();
        // Add a new row
        $(document).on('click', '.add-row', function () {
            const itemName = $('#ItemName').val();
            const itemText = $('#ItemName option:selected').text();
            const quantity = parseFloat($('#Quantity').val()) || 0;
            const balanceQuantity = parseFloat($('#BalanceQuantity').val()) || 0;
            const requiredDate = $('#RequiredDate').val();

            // Validate inputs
            if (!itemName || quantity <= 0 || balanceQuantity <= 0 || !requiredDate) {
                alert('Please fill out all required fields: Item Name, Quantity, Balance Quantity, and Required Date.');
                return;
            }

            const tableBody = $('#MaterialRequisitionTable tbody');
            const rowCount = tableBody.find('tr').length;

            const dynamicRow = `
                <tr>
                    <td class="col-md-4">
                        <input type="hidden" name="MaterialRequisitions.MaterialRequisitionDetails[${rowCount}].ItemID" value="${itemName}" />
                        <input type="text" class="form-control" value="${itemText}" readonly />
                    </td>
                    <td>
                        <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[${rowCount}].Quantity" value="${quantity}" readonly />
                    </td>
                    <td>
                        <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[${rowCount}].BalanceQuantity" value="${balanceQuantity}" readonly />
                    </td>
                    <td>
                        <input type="date" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[${rowCount}].RequiredDate" value="${requiredDate}" readonly />
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                    </td>
                </tr>`;

            tableBody.append(dynamicRow);

            // Clear input fields
            $('#ItemName').val('');
            $('#Quantity').val('');
            $('#BalanceQuantity').val('');
            $('#RequiredDate').val('');
        });

        // Remove a row
        $(document).on('click', '.remove-row', function () {
            $(this).closest('tr').remove();
            // Update name attributes for proper binding
            $('#MaterialRequisitionTable tbody tr').each(function (index) {
                $(this).find('input, select').each(function () {
                    const name = $(this).attr('name');
                    if (name) {
                        const updatedName = name.replace(/\[\d+\]/, `[${index}]`);
                        $(this).attr('name', updatedName);
                    }
                });
            });
        });
    });


</script>
