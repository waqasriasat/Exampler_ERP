@model Exampler_ERP.Models.Temp.MaterialRequisitionsIndexViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="MaterialRequisitions.RequisitionID" />
<input type="hidden" asp-for="MaterialRequisitions.FinalApprovalID" />
<input type="hidden" asp-for="MaterialRequisitions.ProcessTypeApprovalID" />
<input type="hidden" asp-for="MaterialRequisitions.RequisitionStatusTypeID" />
<!-- Row for Inputs -->
<div class="row g-3 mb-3 align-items-end">
    <div class="col-md-4">
        <label for="ItemName" class="form-label fw-bold">Item Name</label>
        <select id="ItemName" name="ItemName" class="form-select">
            <option value="">Select Item</option>
            @foreach (var type in ViewBag.ItemList)
            {
                <option value="@type.Value">@type.Text</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label for="Quantity" class="form-label fw-bold">Quantity</label>
        <input type="text" id="Quantity" name="Quantity" class="form-control" />
    </div>
    <div class="col-md-2">
        <label for="BalanceQuantity" class="form-label fw-bold">Balance Quantity</label>
        <input type="text" id="BalanceQuantity" name="BalanceQuantity" class="form-control" />
    </div>
    <div class="col-md-2">
        <label for="RequiredDate" class="form-label fw-bold">Required Date</label>
        <input type="date" id="RequiredDate" name="RequiredDate" class="form-control" />
    </div>
    <div class="col-md-2 center-button">
        <button type="button" class="btn btn-primary add-row width-button">Add</button>
    </div>
</div>
<hr />
<!-- Table for Added Rows -->
<div class="table-responsive mb-3">
    <table class="table table-bordered" id="MaterialRequisitionTable">
        <thead class="table-light">
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Balance Quantity</th>
                <th>Required Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.MaterialRequisitions.MaterialRequisitionDetails != null && Model.MaterialRequisitions.MaterialRequisitionDetails.Count > 0)
            {
                @for (int i = 0; i < Model.MaterialRequisitions.MaterialRequisitionDetails.Count; i++)
                {
                    <tr>
                        <td class="col-md-4">
                            <select class="form-select" name="MaterialRequisitions.MaterialRequisitionDetails[@i].ItemID" value="MaterialRequisitions.MaterialRequisitionDetails[@i].ItemID">
                                <option value="">Select Item</option>
                                @foreach (var type in ViewBag.ItemNameList)
                                {
                                    if (type.Value == Model.MaterialRequisitions.MaterialRequisitionDetails[i].ItemID.ToString())
                                    {
                                        <option value="@type.Value" selected>@type.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@type.Value">@type.Text</option>
                                    }
                                }
                            </select>
                        </td>
                        <td>
                            <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].Quantity" value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].Quantity" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].BalanceQuantity" value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].BalanceQuantity" />
                        </td>
                        <td>
                            <input type="date" class="form-control" name="MaterialRequisitions.MaterialRequisitionDetails[@i].RequiredDate"
                                   value="@Model.MaterialRequisitions.MaterialRequisitionDetails[i].RequiredDate.ToString("yyyy-MM-dd")" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-danger remove-row width-button">Remove</button>
                        </td>
                    </tr>
                }

            }

        </tbody>
    </table>
</div>

<!-- Remarks Section -->
<div class="row mb-3">
    <div class="col-md-12">
        <label asp-for="MaterialRequisitions.Remarks" class="form-label fw-bold">Remarks</label>
        <textarea asp-for="MaterialRequisitions.Remarks" class="form-control" rows="3"></textarea>
    </div>
</div>
