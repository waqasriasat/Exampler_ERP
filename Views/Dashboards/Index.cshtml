    var lblActiveEmployee = HttpContextAccessor?.HttpContext?.Session.GetInt32("totalActiveEmployee") ?? 0;
    var lblTotalEmployee = HttpContextAccessor?.HttpContext?.Session.GetInt32("totalEmployee") ?? 0;
    var lblPresentEmployee = HttpContextAccessor?.HttpContext?.Session.GetInt32("PresentEmployee") ?? 0;
    var lblAbsentEmployee = lblActiveEmployee - lblPresentEmployee;
