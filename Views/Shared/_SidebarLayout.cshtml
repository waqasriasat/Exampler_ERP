@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css" />
</head>
<body>
    <div class="d-flex flex-column flex-md-row min-vh-100">
        <!-- Sidebar -->
        <nav class="sidebar bg-light p-3" style="min-width: 250px;">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/Auth/UserLogin">@Localizer["lbl_UserLogin"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Auth/EmployeeLogin">@Localizer["lbl_EmployeeLogin"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Auth/SupplierLogin">@Localizer["lbl_SupplierLogin"]</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content (Login Form Centered) -->
        
            @RenderBody()
        
    </div>

    @RenderSection("PageStyles", false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
